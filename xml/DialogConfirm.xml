<?xml version="1.0" encoding="utf-8"?>
<window>
<!-- 1.7 DialogConfirm.xml
ID 	Type 		Description
1 	label 		Heading label
9 	textbox 	Message
10 	button 		No button
11 	button 		Yes button
12 	button 		(for future use)
20 	progress 	Progress bar  

WIP - colors and layout 
-->
	<defaultcontrol always="true">9000</defaultcontrol>
	<onunload condition="Window.IsActive(InterfaceSettings) + !Skin.HasSetting(initial_startup_done)">ReplaceWindow(1101)</onunload>
	<controls>
	
		<control type="group">
			
			<include content="Animation_OpenClose_Slide">
				<param name="slide_start" value="0,0" />
				<param name="slide_end" value="0,0" />
			</include>
			
			<control type="image">
				<centertop>50%</centertop>
				<width>100%</width>
				<height>200</height>
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white90.png</texture>
			</control>
			<control type="image">
				<visible>false</visible>
				<centertop>50%</centertop>
				<centerleft>50%</centerleft>
				<width>750</width>
				<height>110</height>
				<texture border="265,0,265,0" colordiffuse="white">buttons/button_6to1_Trans_sem.png</texture>
				<aspectraio align="center" aligny="center">keep</aspectraio>
			</control>
			<control type="image">
				<centertop>40%</centertop>
				<width>100%</width>
				<height>95</height>
				<bordersize>0,0,0,1</bordersize>
				<bordertexture colordiffuse="$VAR[color_global_dialog_accent]">colors/white.png</bordertexture>
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white.png</texture>
			</control>
			<control type="image">
				<centerbottom>40%</centerbottom>
				<width>100%</width>
				<height>95</height>
				<bordersize>0,1,0,0</bordersize>
				<bordertexture colordiffuse="$VAR[color_global_dialog_accent]">colors/white.png</bordertexture>
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white.png</texture>
			</control>
			<control type="label" id="1">
				<top>34%</top>
				<height>150</height>
				<align>center</align>
				<font>liberationsans_26_regular_b</font>
				<textcolor>$VAR[color_global_dialog_accent]</textcolor>
			</control>
			<control type="textbox" id="9">
				<bottom>365</bottom>
				<height>150</height>
				<align>center</align>
				<font>toggledebug</font>
				<textcolor>$VAR[color_global_dialog_accent]</textcolor>
			</control>
			<control type="progress" id="20">
				<centerleft>50%</centerleft>
				<width>550</width>
				<top>43%</top>
				<height>2</height>
				<info>System.Progressbar</info>
			</control>
			<control type="grouplist" id="9000">
				<align>center</align>
				<width>100%</width>
				<centertop>50%</centertop>
				<height>50</height>
				<orientation>horizontal</orientation>
				<itemgap>30</itemgap>
				<onright>9000</onright>
				<onleft>9000</onleft>
				
				<control type="button" id="11">
					<include>Animation_Item_Focus</include>
					<description>Button_VideoInfo as template template - future include rounded button</description>
					<width>280</width>
					<height>50</height>
					<align>center</align>
					<aligny>center</aligny>
					<textoffsetx>30</textoffsetx>
					<font>notosans_25_regular_b</font>
					<focusedcolor>$VAR[color_global_dialog_background]</focusedcolor>
					<textcolor>$VAR[color_global_button_text_fo]</textcolor>
					<texturefocus colordiffuse="$VAR[color_global_button_text_fo]" diffuse="diffuse/gradienttoplinear100.png" border="25">frames/circler25.png</texturefocus>
					<texturenofocus colordiffuse="$VAR[color_global_button_text_fo]" border="25">frames/bordercircler25.png</texturenofocus>
				</control>
				<control type="button" id="10">
					<include>Animation_Item_Focus</include>
					
					<width>280</width>
					<height>50</height>
					<align>center</align>
					<aligny>center</aligny>
					<textoffsetx>30</textoffsetx>
					<font>notosans_25_regular_b</font>
					<focusedcolor>$VAR[color_global_dialog_background]</focusedcolor>
					<textcolor>$VAR[color_global_button_text_fo]</textcolor>
					<texturefocus colordiffuse="$VAR[color_global_button_text_fo]" diffuse="diffuse/gradienttoplinear100.png" border="25">frames/circler25.png</texturefocus>
					<texturenofocus colordiffuse="$VAR[color_global_button_text_fo]" border="25">frames/bordercircler25.png</texturenofocus>
				</control>
				<control type="button" id="12">
					<include>Animation_Item_Focus</include>
					
					<width>280</width>
					<height>50</height>
					<align>center</align>
					<aligny>center</aligny>
					<textoffsetx>30</textoffsetx>
					<font>notosans_25_regular_b</font>
					<focusedcolor>$VAR[color_global_dialog_background]</focusedcolor>
					<textcolor>$VAR[color_global_button_text_fo]</textcolor>
					<texturefocus colordiffuse="$VAR[color_global_button_text_fo]" diffuse="diffuse/gradienttoplinear100.png" border="25">frames/circler25.png</texturefocus>
					<texturenofocus colordiffuse="$VAR[color_global_button_text_fo]" border="25">frames/bordercircler25.png</texturenofocus>
				</control>
			</control>
		</control>
		<include content="swan_debug_overlay" />
	</controls>
</window>

