				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>1920</width>
					<height>1080</height>
					<aspectratio>keep</aspectratio>
					<texture background="true">$INFO[Container($PARAM[ContainerID]).ListItem.$PARAM[origin]]</texture>
				</control>
				<control type="image">
					<centerleft>50%</centerleft>
