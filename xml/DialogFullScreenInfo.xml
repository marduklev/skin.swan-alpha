	<onload condition="!player.paused">PlayerControl(play)</onload>
	
	
   <controls>
	
	<control type="button" id="799">
		<include>HiddenObject</include>
		<onup>Close</onup>
		<ondown>Close</ondown>
		<onleft>Close</onleft>
		<onright>Close</onright>
	</control>
	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="300" tween="sine" easing="in" />
		<effect type="slide" start="0,1920" end="0" time="350" tween="cubic" easing="out" />
	</animation>
	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
		<effect type="slide" start="0" end="0,1920" time="350" tween="cubic" easing="out" />
	</animation>
	<control type="group">
		<animation effect="fade" start="100" end="0" time="400" condition="[Player.Paused + System.IdleTime(5) + !Window.IsActive(videoosd)] | [[Window.IsActive(osdvideosettings) | Window.IsActive(osdaudiosettings) | Window.IsActive(osdsubtitlesettings)] + Window.IsTopMost(sliderdialog)]">conditional</animation>
			
		<width>100%</width>
		<height>100%</height>
