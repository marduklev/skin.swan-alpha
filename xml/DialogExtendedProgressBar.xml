<?xml version="1.0" encoding="UTF-8"?>
<window>
<!-- 	1.9 DialogExtendedProgressBar.xml
ID 	Type 		Description
30 	label 		Heading label
31 	label 		Line 1
32 	progress 	Scan progress bar  
-->
	<zorder>100</zorder>
	
	<controls>
	
		<control type="group">
			<animation effect="fade" start="100" end="0" time="325" condition="Window.IsActive(fullscreenvideo)">conditional</animation>
			<top>20</top>
			<left>0</left>
			<width>1140</width>
			<height>110</height>
			<!-- hc bg
			ff131313 -->
			<control type="image">
				<left>0</left>
				<width>1120</width>
				<height>110</height>
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white90.png</texture>
			</control>
			
			<control type="image">
				<description>round border need aspect keep</description>
				<left>1065</left>
				<width>110</width>
				<height>110</height>
				<aspectratio aligny="center" align="center">keep</aspectratio>
				<texture flipx="true" colordiffuse="$VAR[color_global_dialog_background]" diffuse="colors/white90.png">artworkdiffuse/circle.png</texture>
			</control>
			<control type="image">
				<description>indicator icon music,audio,movie,tv...image var - the only image control which make use of circleborder_thin png</description>
				<left>1068</left>
				<width>100</width>
				<height>110</height>
				<bordersize>2</bordersize>
				<aspectratio aligny="center" align="center">keep</aspectratio>
				<texture colordiffuse="grey">icons/settingsmedia.png</texture>
				<bordertexture colordiffuse="grey" diffuse="colors/white90.png">artworkdiffuse/circleborderthin.png</bordertexture>
			</control>
			
			<control type="image">
				<left>30</left>
				<width>100</width>
				<height>110</height>
				<bordersize>20</bordersize>
				<aspectratio aligny="center" align="center">keep</aspectratio>
				<texture colordiffuse="$VAR[color_global_dialog_background]">diffuse/circle.png</texture>
				<bordertexture colordiffuse="$VAR[color_global_button_selected]">special://skin/extras/busy/busyload2.apng</bordertexture>
			</control>
			<control type="label">
				<left>30</left>
				<width>100</width>
				<height>105</height>
				<align>center</align>
				<textcolor>$VAR[color_global_button_text_fo]</textcolor>
				<font>font20_title</font>
				<label>$INFO[Control.GetLabel(32),, %]</label>
			</control>
			
			<control type="progress" id="32">
				<texturebg colordiffuse="5cffffff" border="2">colors/white.png</texturebg>
				<midtexture colordiffuse="red" border="2">colors/white.png</midtexture>
				<top>98</top>
				<left>150</left>
				<height>1</height>
				<width>850</width>
			</control>
			
			<control type="label" id="30">
				<left>150</left>
				<top>20</top>
				<width>800</width>
				<height>18</height>
				<aligny>center</aligny>
				<font>font_notification</font>
				<!-- 
				<scroll>true</scroll>
				<scrollspeed>60</scrollspeed>
				-->
				<textcolor>$VAR[color_global_button_text_fo]</textcolor>
			</control>
			<control type="label" id="31">
				<left>150</left>
				<top>50</top>
				<width>850</width>
				<height>40</height>
				<font>font27</font>
				<aligny>center</aligny>
				<textcolor>$VAR[color_global_dialog_accent]</textcolor>
			</control>
		</control>
	</controls>
</window>
