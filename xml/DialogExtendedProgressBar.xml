<?xml version="1.0" encoding="utf-8"?>
<window>
<!-- 	1.9 DialogExtendedProgressBar.xml
ID 	Type 		Description
30 	label 		Heading label
31 	label 		Line 1
32 	progress 	Scan progress bar  
-->
	<zorder>100</zorder>
	
	<controls>
	
		<control type="group">
			<animation effect="fade" start="100" end="0" time="325" condition="Window.IsActive(fullscreenvideo)">conditional</animation>
			<top>20</top>
			<left>0</left>
			<width>1200</width>
			<height>110</height>
			<control type="image">
				<left>0</left>
				<width>100</width>
				<height>110</height>
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white.png</texture>
			</control>
			<control type="image">
				<left>210</left>
				<height>110</height>
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white.png</texture>
			</control>
			<control type="image">
				<left>100</left>
				<width>110</width>
				<height>110</height>
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white50.png</texture>
			</control>
			<control type="image">
				<left>100</left>
				<width>110</width>
				<height>110</height>
				<bordersize>20</bordersize>
				<aspectratio aligny="center" align="center">keep</aspectratio>
				<texture colordiffuse="$VAR[color_global_dialog_background]">diffuse/circle.png</texture>
				<bordertexture colordiffuse="$VAR[color_global_dialog_accent]">special://skin/extras/busy/busyload2.apng</bordertexture>
			</control>
			<control type="label">
				<left>100</left>
				<width>100</width>
				<height>105</height>
				<align>center</align>
				<textcolor>$VAR[color_global_button_text_fo]</textcolor>
				<font>notosans_20_bold</font>
				<label>$INFO[Control.GetLabel(32),, %]</label>
			</control>
			<control type="progress" id="32">
				<texturebg colordiffuse="$VAR[color_global_button_text_fo]">colors/white20.png</texturebg>
				<midtexture colordiffuse="$VAR[color_global_dialog_accent]">colors/white.png</midtexture>
				<top>90</top>
				<left>250</left>
				<height>2</height>
				<right>5</right>
			</control>
			<control type="label" id="30">
				<left>250</left>
				<top>25</top>
				<width>80%</width>
				<height>18</height>
				<font>roboto_35_thin</font>
				<textcolor>$VAR[color_global_dialog_accent]</textcolor>
				<textcolor>$VAR[color_global_button_text_fo]</textcolor>
			</control>
			<control type="label" id="31">
				<left>250</left>
				<top>48</top>
				<width>80%</width>
				<height>40</height>
				<font>notosans_27_regular_l</font>
				<textcolor>$VAR[color_global_button_text_fo]</textcolor>
				<textcolor>$VAR[color_global_dialog_accent]</textcolor>
			</control>
		</control>
	</controls>
</window>
