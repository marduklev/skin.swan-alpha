<?xml version="1.0" encoding="UTF-8"?>
<window>
	<include content="Animation_OpenClose_Slide">
		<param name="slide_start" value="700,0" />
		<param name="slide_end" value="0,0" />
	</include>
	<animation type="WindowOpen" reversible="false">
		<effect type="fade" start="0" end="100" center="auto" tween="cubic" easing="in" time="250" />
	</animation>
	<controls>
		<control type="image" id="400">
			<include>HiddenObject</include>
		</control>
		<control type="group">
			<top>20</top>
			<height>110</height>
			<right>0</right>
			<width>700</width>
			<control type="image">
				<right>-300</right>
				<height>110</height>
				<texture colordiffuse="$VAR[color_global_dialog_background]" flipx="true">diffuse/gradientright.png</texture>
			</control>
			<control type="image">
				<left>20</left>
				<centertop>50%</centertop>
				<width>75</width>
				<height>75</height>
				<bordersize>2</bordersize>
				<aspectratio aligny="center" align="center">keep</aspectratio>
				<texture fallback="defaultaddonhelper.png" diffuse="diffuse/circle.png">$INFO[Control.GetLabel(400)]</texture>
				<bordertexture colordiffuse="$VAR[color_global_dialog_accent]">artworkdiffuse/circleborder.png</bordertexture>
			</control>
			<control type="fadelabel" id="401">
				<left>110</left>
				<top>30</top>
				<width>500</width>
				<height>18</height>
				<aligny>center</aligny>
				<font>font_notification</font>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
				<textcolor>$VAR[color_global_button_text_fo]</textcolor>
			</control>
			<control type="fadelabel" id="402">
				<left>110</left>
				<top>50</top>
				<width>500</width>
				<height>40</height>
				<font>font27</font>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
				<textcolor>$VAR[color_global_dialog_accent]</textcolor>
			</control>
		</control>
	</controls>
</window>
