<?xml version="1.0" encoding="utf-8"?>
<window>
<!-- 	busydialog 	WINDOW_DIALOG_BUSY 	10138 	DialogBusy.xml 
ID 	Type 			Description
10 	progress 		Progress bar
-->
	<onunload condition="string.isequal(window(home).property(alt_busyspinner_counter),2)">ClearProperty(alt_busyspinner_counter,home)</onunload>
	<onunload condition="string.isequal(window(home).property(alt_busyspinner_counter),1)">SetProperty(alt_busyspinner_counter,2,home)</onunload>
	
	<controls>
		<control type="group">
			<visible>string.isempty(window(home).property(alt_busyspinner_counter))</visible>
			<!-- play act busy close - load activate busy 2nd time yt <visible>string.isempty(window(home).property(TrailerIsPlaying))</visible> -->
			<control type="image">
				<texture colordiffuse="$VAR[color_global_dialog_background]">colors/white60.png</texture>
			</control>
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>200</width>
				<height>200</height>
				<texture colordiffuse="$VAR[color_global_dialog_accent]">special://skin/extras/busy/busyload3.apng</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>
		</control>
		<include condition="!string.isempty(window(home).property(alt_busyspinner_counter)) + !Skin.HasSetting(spotlight_home_fanart_left)" content="busyspinner_spotlight_autoplaytrailer">
			<param name="centerleft" value="70%" />
			<param name="centertop" value="30%" />
		</include>
		<include condition="!string.isempty(window(home).property(alt_busyspinner_counter)) +  + Skin.HasSetting(spotlight_home_fanart_left)" content="busyspinner_spotlight_autoplaytrailer">
			<param name="centerleft" value="30%" />
			<param name="centertop" value="30%" />
		</include>
	</controls>
</window>
