<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1102">
    <defaultcontrol always="true">40</defaultcontrol>
	<onload condition="!String.IsEmpty(Window(home).Property(SwanShortcut_LinkWidget))">SetFocus(9000)</onload>
	<onload condition="!String.IsEmpty(Window(home).Property(ShortcutPlaylistContent))">SetFocus(40)</onload>
	<onunload condition="!String.IsEmpty(Window(home).Property(SwanShortcut_LinkWidget))">ClearProperty(SwanShortcut_LinkWidget,home)</onunload>
	<onunload condition="!String.IsEmpty(Window(home).Property(ShortcutPlaylistContent))">ClearProperty(ShortcutPlaylistContent,home)</onunload>
	
	<onunload condition="!String.IsEmpty(Window(home).Property(shortcutaction_inprogress))">ClearProperty(shortcutaction_inprogress,home)</onunload>
	<onunload condition="!String.IsEmpty(Window(home).Property(shortcutitem_nr))">ClearProperty(shortcutitem_nr,home)</onunload>
	
	<onunload condition="!String.IsEmpty(Window(home).Property(select))">ClearProperty(select,home)</onunload>
	
	<include>Animation_OpenClose_Slide</include>
    <menucontrol>8000</menucontrol>
	
	<controls>
        <control type="group">
            <include content="dialog_background_triplepanel" condition="String.IsEmpty(Window(home).Property(select))" />
        </control>
        
		<include content="SwanShortcuts_DialogSelect_Contents" condition="!String.IsEmpty(Window(home).Property(ShortcutPlaylistContent))" />
		<include content="SwanShortcuts_DialogSelect_LinkWidget" condition="!String.IsEmpty(Window(home).Property(SwanShortcut_LinkWidget))" />
		
		<!-- <param name="fanart_panel" value="String.IsEqual(Window(home).Property(select),**)"  -->
		<include content="DialogSelect_Container" condition="!String.IsEmpty(Window(home).Property(select))">
			<param name="fanart_panel" value="!String.IsEqual(Window(home).Property(select),spotlight_metadata_alignx)" />
		</include>
		
		
		<include condition="Skin.HasSetting(window_frame)" content="window_frame" />
	</controls>
</window>