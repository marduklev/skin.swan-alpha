<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">500</defaultcontrol>
	<onload condition="Control.IsVisible(60)">setfocus(60)</onload>
	<onload condition="!Control.IsVisible(60)">setfocus(5)</onload>
	<controls>
		<visible>!Window.IsActive(Slideshow)</visible>
		
		<control type="button" id="500">
			<description>nav</description>
			<include content="HiddenObject" />
			<onleft>Dialog.Close(all,true)</onleft>
			<onleft>Action(left)</onleft>
			<onleft>info</onleft>
			
			<onup>Dialog.Close(all,true)</onup>
			<onup>Action(left)</onup>
			<onup>info</onup>
			<ondown>Dialog.Close(all,true)</ondown>
			<ondown>Action(right)</ondown>
			<ondown>info</ondown>
			
			<onright condition="Control.IsVisible(60)">60</onright>
			<onright condition="!Control.IsVisible(60)">Dialog.Close(all,true)</onright>
			<onright condition="!Control.IsVisible(60)">Action(right)</onright>
			<onright condition="!Control.IsVisible(60)">info</onright>
		</control>
		
		<control type="group">
		<animation type="WindowOpen" reversible="false">
			<effect type="zoom" start="0" end="100" center="50%,50%" tween="quadratic" easing="in" time="500" />
			<effect type="fade" delay="160" end="100" time="240" />
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="zoom" start="100" end="0" center="50%,50%" tween="quadratic" easing="out" time="200" />
			<effect type="fade" start="100" end="0" time="240" />
		</animation>
		<control type="group">
			<control type="image">
		        <description>make diff transparency image to get rid of fade animation</description>
		        <top>0</top>
		        <width>80%</width>
		        <centerleft>50%</centerleft>
		        <texture background="true" diffuse="diffuse/spotlightgradientcenter.png">$VAR[ImageLayout_fanart]</texture>
		        <aspectratio scalediffuse="true" align="center" aligny="top">keep</aspectratio>
		        <animation effect="fade" start="100" end="20" time="0" condition="true">conditional</animation>
	        </control>
			<control type="image">
				<texture border="2" colordiffuse="$VAR[color_global_background_layer1]" diffuse="colors/white90.png">colors/white.png</texture>
			</control>
			<control type="image">
				<top>80</top>
				<width>1880</width>
				<height>1</height>
				<texture colordiffuse="$VAR[color_lib_text_secondary]">colors/white50.png</texture>
			</control>
			<control type="image">
				<bottom>80</bottom>
				<width>1880</width>
				<height>1</height>
				<texture colordiffuse="$VAR[color_lib_text_secondary]">colors/white50.png</texture>
			</control>
			<control type="label">
				<height>25</height>
				<right>50</right>
				<top>30</top>
				<width>400</width>
				<font>notosans_32_bold</font>
				<textcolor>$VAR[color_lib_text_main]</textcolor>
				<align>right</align>
				<label>$INFO[System.CurrentWindow]</label>
			</control>
			<control type="image">
				<left>50</left>
				<centertop>50%</centertop>
				<bordersize>15</bordersize>
				<width>1000</width>
				<height>1000</height>
				<bordertexture colordiffuse="white">colors/black.png</bordertexture>
				<texture diffuse="colors/white90.png">$INFO[ListItem.FolderPath]</texture>
				<aspectratio align="left" aligny="center">keep</aspectratio>
			</control>
		</control>
		<control type="group">
		        <animation effect="slide" start="0,0" end="0,230" time="0" reversible="false" condition="Integer.IsEqual(Container(5).NumItems,5)">conditional</animation>
				
		       
			    <top>110</top>
				<control type="list" id="5">
					<right>50</right>
					<width>800</width>
					<height>880</height>
					<orientation>vertical</orientation>
					
					<onfocus>SetFocus(500)</onfocus>
					
					<onup>5</onup>
					<ondown>5</ondown>
					<pagecontrol>60</pagecontrol>
					<focusedlayout height="80">
						<control type="image">
				            <texture colordiffuse="black" diffuse="colors/white30.png">colors/white.png</texture>
						</control>
						<control type="image">
							<visible>control.hasfocus(5)</visible>
							<bordersize>10</bordersize>
							<bordertexture diffuse="colors/white40.png">colors/black.png</bordertexture>
				            <texture diffuse="colors/white30.png">$INFO[ListItem.FolderPath]</texture>
						</control>
						<control type="textbox">
							<left>10</left>
							<right>10</right>
							<height>80</height>
							<width>700</width>
							<aligny>center</aligny>
							<autoscroll>false</autoscroll>
							<font>montserrat_22_semibold_lowline</font>
							<label>$INFO[ListItem.Label][COLOR $VAR[color_lib_text_secondary]]$INFO[ListItem.Label2,    •    ,][/COLOR]</label>
							<textcolor>$VAR[color_lib_text_main]</textcolor>
						</control>
					</focusedlayout>
					<itemlayout height="80">
						<control type="image">
				            <texture colordiffuse="black" diffuse="colors/white30.png">colors/white.png</texture>
						</control>
						<control type="textbox">
							<left>10</left>
							<right>10</right>
							<height>80</height>
							<width>700</width>
							<aligny>center</aligny>
							<align>left</align>
							<autoscroll>false</autoscroll>
							<font>montserrat_22_semibold_lowline</font>
							<label>$INFO[ListItem.Label][COLOR $VAR[color_lib_text_secondary]]$INFO[ListItem.Label2,    •    ,][/COLOR]</label>
							<textcolor>$VAR[color_lib_text_main]</textcolor>
						</control>
					</itemlayout>
			    </control>
				<control type="scrollbar" id="60">
					<right>10</right>
					<top>20</top>
					<width>2</width>
					<height>880</height>
					<orientation>vertical</orientation>
					<onleft>500</onleft>
					<onright>Dialog.Close(all,true)</onright>
					<onright>Action(right)</onright>
					<onright>info</onright>
				</control>
				
		    </control>
	    </control>
    </controls>
</window>

