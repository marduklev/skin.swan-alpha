					<top>60</top>
					<height>30</height>
					<align>center</align>
					<label>$VAR[CurrentContent_Info]</label>
					<font>DialogListItem</font>
					<textcolor>$VAR[color_header_text_main]</textcolor>
					<visible>!Skin.HasSetting(HideSubHeaderInfo)</visible>
					<visible>!Control.IsVisible(58)</visible>
				</control>
				
			</control>
			
		</control>
				
		</definition>
