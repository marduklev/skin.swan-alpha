<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<onload>setfocus(11)</onload>
	<!-- 1.19 DialogPVRChannelsOSD.xml
ID 	Type 		Description
11 	container 	Channels list 
-->
	<controls>
		<control type="group">
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="200" tween="sine" easing="in" />
				<effect type="slide" start="0,1920" end="0" time="250" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="200" tween="sine" easing="out" />
				<effect type="slide" start="0" end="0,1920" time="250" tween="cubic" easing="out" />
			</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="[Player.Paused + System.IdleTime(5) + [!Window.IsActive(videoosd) + !Window.IsActive(fullscreeninfo)]] | $EXP[embinfodialogactive] | Window.IsActive(1104)">conditional</animation>
			<width>100%</width>
			<height>100%</height>
			
			
			<control type="image">
				<description>bottom offset neg as osd button bg</description>
				<bottom>0</bottom>
				<width>102%</width>
				<height>650</height>
				<aspectratio scalediffuse="true" align="center" aligny="bottom">stretch</aspectratio>
				<bordersize>0,100,0,0</bordersize>
				<texture colordiffuse="$VAR[color_osdvideo_bgpanel]">colors/white60.png</texture>
				<bordertexture colordiffuse="$VAR[color_osdvideo_bgpanel]">colors/white70.png</bordertexture>
			</control>
			<control type="label">
				<bottom>550</bottom>
				<left>50</left>
				<width>90%</width>
				<height>100</height>
				<font>font13</font>
				<align>left</align>
				<aligny>center</aligny>
				<wrapmultiline>true</wrapmultiline>
				<textcolor>$VAR[color_osdvideo_main]</textcolor>
				<label>[B]$INFO[System.CurrentWindow][/B]</label>
			</control>
			
			<control type="group">
			
			<description>for layout decisions - needed stuff	
- progressbar
			visible ListItem.HasEpg + !$PARAM[has_info_icon]
			info ListItem.Progress	
- icon indicator  is.playable | is.recording
- text channel title + title + time values (start end? duration)
- img  channel icon and corresponding media item artwork thumb ?
</description>
			
				
				<width>100%</width>
				<height>550</height>
				<bottom>0</bottom>
				<left>100</left>
				<right>100</right>
				
				
				
				<control type="panel" id="11">
					<top>10</top>
					<height>550</height>
					
					<itemlayout height="210" width="450">
						<control type="group">
							<width>450</width>
							<height>205</height>
							<animation effect="fade" end="60" condition="true">conditional</animation>
							<control type="image">
								<description>tile bg</description>
								<texture colordiffuse="ff131313">colors/white.png</texture>
								<top>0</top>
								<bordersize>5</bordersize>
								<aspectratio scalediffuse="true" aligny="top">scale</aspectratio>
							</control>
							<control type="group">
								<left>10</left>
								<right>10</right>
								<control type="image">
									<description>diffused fanart</description>
									<top>10</top>
									<width>50%</width>
									<height>90%</height>
									<texture background="true" diffuse="diffuse/spotlightrightdiffuse.png">$VAR[ImageLayout_fanart]</texture>
									<aspectratio scalediffuse="false" align="left" aligny="top">scale</aspectratio>
								</control>
								<control type="textbox">
									<description>genre, like to have it framed but button wont work good</description>
									<visible>!String.IsEmpty(ListItem.Genre)</visible>
									<bottom>15</bottom>
									<left>15</left>
									<width>55%</width>
									<height>50</height>
									<aligny>center</aligny>
									<font>NotoSans_bold15</font>
									<textcolor>white</textcolor>
									<label>$INFO[ListItem.Genre]</label>
								</control>
								<control type="progress">
									<visible>ListItem.HasEpg</visible>
									<left>10</left>
									<right>10</right>
									<bottom>10</bottom>
									<height>2</height>
									<align>left</align>
									<info>ListItem.Progress</info>
								</control>
							</control>
							<control type="textbox">
								<top>10</top>
								<right>20</right>
								<height>25</height>
								<width>45%</width> 
								<info>listitem.title</info>
								<font>NotoSans_bold15</font>
								<textcolor>white</textcolor>
								<align>right</align>
								<aligny>center</aligny>
							</control>
							<control type="textbox">
								<description>item description e.g. plot</description>
								<top>40</top>
								<right>20</right>
								<bottom>70</bottom>
								<width>45%</width> 
								<label>$VAR[plot]</label>
								<font>NotoSans_bold15</font>
								<textcolor>midgrey</textcolor>
								<align>right</align>
								<aligny>center</aligny>
							</control>
							<control type="image">
								<bottom>33</bottom>
								<right>15</right>
								<width>35</width>
								<height>35</height>
								<bordersize>5</bordersize>
								<animation effect="fade" start="100" end="60" condition="ListItem.IsRecording" loop="true" time="1000">conditional</animation>
								<aspectratio align="right">keep</aspectratio>
								<texture colordiffuse="$VAR[PVRTimerIcon_color_fo]">$VAR[PVR_indicator]</texture>
							</control>
							<control type="textbox">
								<bottom>15</bottom>
								<right>20</right>
								<align>right</align>
								<height>25</height>
								<font>NotoSans_bold15</font>
								<textcolor>white</textcolor>
								<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
							</control>
						</control>
					</itemlayout>
				
					<focusedlayout height="210" width="450">
						<control type="group">
							<width>450</width>
							<height>205</height>
							<control type="image">
								<description>focus frame bad if item bg match global bg</description>
								<texture colordiffuse="white">colors/white.png</texture>
								<top>0</top>
								<aspectratio scalediffuse="true" aligny="top">scale</aspectratio>
							</control>
							<control type="image">
								<description>tile bg</description>
								<texture colordiffuse="ff131313">colors/white.png</texture>
								<top>0</top>
								<bordersize>5</bordersize>
								<aspectratio scalediffuse="true" aligny="top">scale</aspectratio>
							</control>
							<control type="group">
								<left>10</left>
								<right>10</right>
								<control type="image">
									<description>diffused fanart</description>
									<top>10</top>
									<width>50%</width>
									<height>90%</height>
									<texture background="true" diffuse="diffuse/spotlightrightdiffuse.png">$VAR[ImageLayout_fanart]</texture>
									<aspectratio scalediffuse="false" align="left" aligny="top">scale</aspectratio>
								</control>
								<control type="textbox">
									<description>genre, like to have it framed but button wont work good</description>
									<visible>!String.IsEmpty(ListItem.Genre)</visible>
									<bottom>15</bottom>
									<left>15</left>
									<width>55%</width>
									<height>50</height>
									<aligny>center</aligny>
									<font>NotoSans_bold15</font>
									<textcolor>white</textcolor>
									<label>$INFO[ListItem.Genre]</label>
								</control>
								<control type="progress">
									<visible>ListItem.HasEpg</visible>
									<left>10</left>
									<right>10</right>
									<bottom>10</bottom>
									<height>2</height>
									<align>left</align>
									<info>ListItem.Progress</info>
								</control>
							</control>
							<control type="textbox">
								<top>10</top>
								<right>20</right>
								<height>25</height>
								<width>45%</width> 
								<info>listitem.title</info>
								<font>NotoSans_bold15</font>
								<textcolor>white</textcolor>
								<align>right</align>
								<aligny>center</aligny>
							</control>
							<control type="textbox">
								<description>item description e.g. plot</description>
								<top>40</top>
								<right>20</right>
								<bottom>70</bottom>
								<width>45%</width> 
								<label>$VAR[plot]</label>
								<font>NotoSans_bold15</font>
								<textcolor>midgrey</textcolor>
								<align>right</align>
								<aligny>center</aligny>
							</control>
							<control type="image">
								<bottom>33</bottom>
								<right>15</right>
								<width>35</width>
								<height>35</height>
								<bordersize>5</bordersize>
								<animation effect="fade" start="100" end="60" condition="ListItem.IsRecording" loop="true" time="1000">conditional</animation>
								<aspectratio align="right">keep</aspectratio>
								<texture colordiffuse="$VAR[PVRTimerIcon_color_fo]">$VAR[PVR_indicator]</texture>
							</control>
							<control type="textbox">
								<bottom>15</bottom>
								<right>20</right>
								<align>right</align>
								<height>25</height>
								<font>NotoSans_bold15</font>
								<textcolor>white</textcolor>
								<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
							</control>
						</control>
					
					</focusedlayout>
				</control>
				
