<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">6012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	 <controls>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" time="600" />
				<effect type="slide" start="700,0" end="0,0" time="600" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="400" />
				<effect type="slide" start="0,0" end="700,0" time="400" />
			</animation>
			
			<control type="button" id="6012">
				<bottom>30</bottom>
				<right>0</right>
				<label />
				<height>65</height>
				<width>650</width>
				<font>notosans_23_bold</font>
				<textoffsetx>90</textoffsetx>
				<textcolor />
				<focusedcolor>$VAR[color_playerpopups_text_main]</focusedcolor>
				<selectedcolor>$VAR[color_playerpopups_text_main]</selectedcolor>
				<shadowcolor></shadowcolor>
				<aligny>center</aligny>
				<align>left</align>
				<texturefocus colordiffuse="$VAR[color_playerpopups_background]" border="5">colors/white.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[color_playerpopups_background]" border="5">colors/white.png</texturenofocus>
				<pulseonselect>no</pulseonselect>
			</control>

			<control type="image">
				<animation effect="zoom" start="100,100" center="auto" end="115,115" delay="100" time="550" pulse="true" condition="true">Conditional</animation>
				<bottom>40</bottom>
				<right>587</right>
				<width>46</width>
				<height>46</height>
				<aspectratio>keep</aspectratio>
				<bordersize>5</bordersize>
				<bordertexture colordiffuse="$VAR[color_playerpopups_accent]">special://skin/extras/busy/netflixorigin.apng</bordertexture>
				<texture colordiffuse="$VAR[color_playerpopups_text_main]">nextupicons/00.png</texture>
			</control>
		</control>
	</controls>
</window>
