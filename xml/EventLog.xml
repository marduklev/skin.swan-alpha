<?xml version="1.0" encoding="utf-8"?>
<!-- SWAN -->
<!-- need revisit - hardcoded colors in container -->
<window>
	<backgroundcolor>$VAR[color_global_background_layer1]</backgroundcolor>
	<defaultcontrol always="true">9000</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<views>50</views>
	
	<controls>
		
		<include>global_background</include>
		
		<include>HeaderBar</include>
		
		<control type="group">
			<depth>DepthContentPanel</depth>
			
			<control type="grouplist" id="9000">
				<orientation>vertical</orientation>
				<itemgap>8.5</itemgap>
				<left>0</left>
				<top>200</top>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onleft>50</onleft>
				<onright>50</onright>
				<usecontrolcoords>true</usecontrolcoords>
				<width>490</width>
				
				<control type="togglebutton" id="4">
					<font>notosans_27_regular_l</font>
					<height>60</height>
					<align>right</align>
					<aligny>center</aligny>
					<height>50</height>
					<texturefocus flipx="true" colordiffuse="$VAR[color_global_button_panel_fo]">diffuse/gradientleftlinear50.png</texturefocus>
					<alttexturefocus flipx="true" colordiffuse="$VAR[color_global_button_panel_fo]">diffuse/gradientleftlinear50.png</alttexturefocus>
					<texturenofocus />
					<alttexturenofocus />
					<disabledcolor>40FFFFFF</disabledcolor>
					<pulseonselect>no</pulseonselect>
					<textoffsetx>70</textoffsetx>
					<textoffsety>35</textoffsety>
					<label>$LOCALIZE[31032]: $LOCALIZE[584]</label>
					<altlabel>$LOCALIZE[31032]: $LOCALIZE[585]</altlabel>
					<include>Animation_Item_Focus_rightalign</include>
				</control>
				
				<control type="button" id="21">
					<font>notosans_27_regular_l</font>
					<height>60</height>
					<align>right</align>
					<aligny>center</aligny>
					<texturefocus flipx="true" colordiffuse="$VAR[color_global_button_panel_fo]">diffuse/gradientleftlinear50.png</texturefocus>
					<texturenofocus />
					<textoffsetx>70</textoffsetx>
					<textoffsety>35</textoffsety>
					<onclick />
					<selectedcolor>white</selectedcolor>
					<include>Animation_Item_Focus_rightalign</include>
				</control>
				
				<control type="radiobutton" id="22">
					<font>notosans_27_regular_l</font>
					<height>60</height>
					<align>right</align>
					<aligny>center</aligny>
					<texturefocus flipx="true" colordiffuse="$VAR[color_global_button_panel_fo]">diffuse/gradientleftlinear50.png</texturefocus>
					<texturenofocus />
					<textoffsetx>70</textoffsetx>
					<textoffsety>35</textoffsety>
					<include>Animation_Item_Focus_rightalign</include>
				</control>
				
				<control type="radiobutton" id="20">
					<font>notosans_27_regular_l</font>
					<height>60</height>
					<align>right</align>
					<aligny>center</aligny>
					<texturefocus flipx="true" colordiffuse="$VAR[color_global_button_panel_fo]">diffuse/gradientleftlinear50.png</texturefocus>
					<texturenofocus />
					<textoffsetx>70</textoffsetx>
					<textoffsety>35</textoffsety>
					<label>$LOCALIZE[192]</label>
					<include>Animation_Item_Focus_rightalign</include>
				</control>
				<control type="radiobutton" id="501">
					<font>notosans_27_regular_l</font>
					<textoffsetx>70</textoffsetx>
					<height>60</height>
					<align>right</align>
					<aligny>center</aligny>
					<include content="SkinSettings_SettingsRadioButton">
						<param name="label" value="$LOCALIZE[5]" />
						<param name="label2" value="" />
					</include>
					<texturefocus flipx="true" colordiffuse="$VAR[color_global_button_panel_fo]">diffuse/gradientleftlinear50.png</texturefocus>
					<texturenofocus />
					<onclick>ActivateWindow(systemsettings,logging)</onclick>
					<include>Animation_Item_Focus_rightalign</include>
				</control>
			</control>
		</control>
		
		<control type="image">
			<width>71%</width>
			<top>190</top>
			<height>61%</height>
			<right>25</right>
			<texture>colors/white50.png</texture>
			<colordiffuse>$VAR[color_global_button_panel_fo]</colordiffuse>
		</control>
		
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<control type="panel" id="50">
				<width>70%</width>
				<top>200</top>
				<height>65%</height>
				<right>30</right>
				<onleft>9000</onleft>
				<onup>50</onup>
				<ondown>50</ondown>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic">400</scrolltime>
				
				<itemlayout height="90">
					<control type="group">
						<height>90</height>
						<include content="Event_log_Item">
							<param name="BG_visible" value="false" />
							<param name="infotags_autoscroll" value="false" />
						</include>
					</control>
				</itemlayout>
				<focusedlayout height="90">
					<control type="group">
						<height>90</height>
						<include content="Event_log_Item">
							<param name="colordiffuse" value="$VAR[color_global_button_panel_fo]" />
							<param name="BG_visible" value="true" />
							<param name="infotags_autoscroll" value="false" />
						</include>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="scrollbar" id="60">
			<right>5</right>
			<top>250</top>
			<height>65%</height>
			<onleft>50</onleft>
			<onright>9000</onright>
			<onup>60</onup>
			<ondown>60</ondown>
			<visible>Control.IsVisible(50)</visible>
		</control>
		
	</controls>
</window>
