<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<include content="media_window_attributes">
		<param name="view_ids" value="50,51,52" /> 
	</include>
	<onload condition="String.IsEqual(Window(Home).Property(menucontrol_active),common)">ClearProperty(menucontrol_active,home)</onload>
	<onunload condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))">SetProperty(forceopen,fullscreenlivetv,home)</onunload>
	<onunload condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))">ClearProperty(videofullcreen_pvrgrid,home)</onunload>
	<include content="media_window_attributes" />
<!-- 	1.44 MyPVRGuide.xml
ID 	Type 			Description
2 	button 			Select viewtype (list, thumbnail, media info, etc...)
3 	button 			Select sort method (sort by: name, date size, etc...)
4 	togglebutton 	Select sortmode (ascending or descending)
10 	epggrid 		EPG Guide Timeline
11 	container 		Channel groups selector ?
28 	button 			Channel groups button ?
29 	label 			View name (Now / Next / Timeline)
30 	label 			Channel groups name  
-->
	<controls>
		<control type="button" id="2">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="3">
			<include>HiddenObject</include>
		</control>
		<control type="togglebutton" id="4">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="28">
			<description>use container 11 instead ?</description>
			<include>HiddenObject</include>
		</control>
		<control type="label" id="29">
			<description>native 29 	label View name (Now / Next / Timeline)</description>
			<include>HiddenObject</include>
		</control>
		<control type="label" id="30">
			<description>may adjust header ?</description>
			<include>HiddenObject</include>
		</control>
		
		<control type="group">
			<visible>!Skin.HasSetting(BlurEnabled)</visible>
			<include>global_background</include>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(BlurEnabled)</visible>
			<include>GlobalBlurredBackground</include>
		</control>
			
		<control type="image">
			<visible>!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))</visible>
			<bottom>0</bottom>
			<width>102%</width>
			<height>700</height>
			<aspectratio scalediffuse="true" align="center" aligny="bottom">stretch</aspectratio>
			<bordersize>0,100,0,0</bordersize>
			<texture colordiffuse="$VAR[color_osdvideo_bgpanel]">colors/white.png</texture>
			<bordertexture colordiffuse="$VAR[color_osdvideo_bgpanel]">colors/white70.png</bordertexture>
		</control>
		<control type="label">
			<visible>!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))</visible>
			<bottom>600</bottom>
			<left>50</left>
			<width>90%</width>
			<height>100</height>
			<font>font13</font>
			<align>left</align>
			<aligny>center</aligny>
			<wrapmultiline>true</wrapmultiline>
			<textcolor>$VAR[color_osdvideo_main]</textcolor>
			<label>$LOCALIZE[10609]</label>
		</control>
				
		<control type="group">
			<description>viewtypes</description>
			<include>Animation_Close_MediaContainer</include>
			<animation type="Conditional" condition="$EXP[Infodialog_IsActive] | Window.IsActive(mediasource) | [Window.IsActive(shutdownmenu) + !$EXP[Spotlight_ViewType]] | Window.IsActive(1104)">
				<effect type="fade" start="100" end="0" time="250" tween="sine" easing="out" />
				<effect type="zoom" center="50%,50%" start="100" end="0" time="300" tween="cubic" easing="out" />
			</animation>
			
			<!-- <animation type="Conditional" condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))"> -->
				<!-- <effect type="slide" start="0,0" end="0,0" time="250" tween="sine" easing="out" /> -->
				<!-- <effect type="zoom" center="1920,1080" start="100" end="70" time="300" tween="cubic" easing="out" /> -->
			<!-- </animation> -->
			
			<!-- 
			prepare and terefore keep include condition for param with strings
			<timeblocks>60</timeblocks>
			<rulerunit>6</rulerunit>
			 -->
			<!-- 	common -->
			<include condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="50" />
				<param name="grid_vietypelabel" value="19298" />
				<param name="orientation" value="vertical" />
				<param name="height" value="57.7" />
			</include>
			<include condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="51" />
				<param name="grid_vietypelabel" value="19298" />
				<param name="orientation" value="vertical" />
				<param name="height" value="86.5" />
			</include>
			<include condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="52" />
				<param name="grid_vietypelabel" value="gridhorlarge" />
				<param name="orientation" value="vertical" />
				<param name="height" value="104" />
			</include>
			<include condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="53" />
				<param name="grid_vietypelabel" value="19301" />
				<param name="orientation" value="horizontal" />
				<param name="height" value="53" />
			</include>
			
			<!-- osd -->
			<include condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="50" />
				<param name="grid_vietypelabel" value="19298" />
				<param name="orientation" value="vertical" />
				<param name="height" value="57.7" />
			</include>
			<include condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="51" />
				<param name="grid_vietypelabel" value="19298" />
				<param name="orientation" value="vertical" />
				<param name="height" value="57.7" />
			</include>
			<include condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="52" />
				<param name="grid_vietypelabel" value="gridhorlarge" />
				<param name="orientation" value="vertical" />
				<param name="height" value="57.7" />
			</include>
			<include condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="epggrid">
				<param name="grid_id" value="53" />
				<param name="grid_vietypelabel" value="19301" />
				<param name="orientation" value="vertical" />
				<param name="height" value="57.7" />
			</include>
			
			<control type="grouplist" id="8000">
				<orientation>vertical</orientation>
				
			<include content="tawnyowlnest" condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))">
				<top>120</top>
				<left>100</left>
			</include>
			<include content="tawnyowlnest" condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))">
				<top>400</top>
				<left>600</left>
			</include>
				
				<height>100</height>
				<ondown>SetFocus(50)</ondown>
				
				<control type="list" id="11">
					<height>100</height>
					<onleft>500</onleft>
					<onright>9001</onright>
					<orientation>horizontal</orientation>
					
					<!-- 
					if fixedlist
						<left>-250</left>
						<focusposition>1</focusposition>
					 -->
					<itemlayout width="250" height="50">
						<control type="textbox">
							<right>20</right>
							<left>20</left>
							<height>50</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>font_Montserrat_semibold_22</font>
							<textcolor>$VAR[color_grid_channel_text_nf]</textcolor>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, |  ,]</label>
						</control>
					</itemlayout>
					<focusedlayout width="250" height="50">
						<control type="image">
							<animation type="Focus" reversible="false">
								<effect type="zoom" start="0,100" end="100,100" center="50%" time="250" />
								<effect type="fade" start="0" end="100" center="auto" tween="cubic" easing="in" time="150" />
							</animation>
							<visible>Control.HasFocus(11)</visible>
							<texture colordiffuse="$VAR[color_grid_channel_bg_fo]">colors/white.png</texture>
							<bordersize>2</bordersize>
							<bordertexture border="2" colordiffuse="$VAR[color_grid_channel_focusframe]">frames/frame.png</bordertexture>
						</control>
						<control type="textbox">
							<right>20</right>
							<left>20</left>
							<height>50</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>font_Montserrat_24_extrabold</font>
							<textcolor>$VAR[color_grid_channel_text_fo]</textcolor>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, |  ,]</label>
						</control>
						<control type="image">
							<visible>!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))</visible>
							<animation effect="zoom" start="0,100" end="100,100" center="auto" time="200">Focus</animation>
							<bottom>0</bottom>
							<height>4</height>
							<left>4</left>
							<width>95%</width>
							<texture colordiffuse="$VAR[color_grid_channel_focusframe]">colors/white70.png</texture>
						</control>
						<control type="image">
							<visible>!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))</visible>
							<animation effect="zoom" start="0" end="100" center="auto" time="200">Focus</animation>
							<bottom>0</bottom>
							<height>30</height>
							<width>4</width>
							<texture colordiffuse="$VAR[color_grid_channel_focusframe]">colors/white70.png</texture>
						</control>
						<control type="image">
							<animation effect="zoom" start="0" end="100" center="auto" time="200">Focus</animation>
							<visible>!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))</visible>
							<centerleft>48%</centerleft>
							<bottom>-30</bottom>
							<height>30</height>
							<width>4</width>
							<texture colordiffuse="$VAR[color_grid_channel_focusframe]">colors/white70.png</texture>
						</control> 
					</focusedlayout>
				</control>
			</control>
		</control>
		
		<include condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="HeaderBar">
			<param name="HasBGPanel" value="Skin.HasSetting(MediaWindow_UseHeaderBG)" />
		</include>
		<include condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="PreMenucontrol" />
		
		<control type="group">
			<animation effect="slide" start="-450,0" end="0,0" time="300" tween="cubic" easing="inout">VisibleHidden</animation>
			<visible>String.IsEqual(Window(Home).Property(menucontrol_active),common)</visible>
			<visible>String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))</visible>
			<include condition="String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))" content="menucontrol_global" />
		</control>
		
		<include content="window_frame" />
		
		<include content="swan_debug_overlay">
			<param name="textleft" value="
art.thumb    $INFO[ListItem.Art(thumb)]
skin var ChannelStudio_Icon   $VAR[ChannelStudio_Icon]
ListItem.Icon    $INFO[ListItem.Icon]
ListItem.EpgEventIcon   $INFO[ListItem.EpgEventIcon]
ListItem.EpgEventTitle   $INFO[ListItem.EpgEventTitle]

$INFO[]
