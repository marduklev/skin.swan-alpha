<?xml version="1.0" encoding="UTF-8"?>
<window>
<!-- <onload condition="!String.IsEmpty(Window(home).Property(partymode))">ActivateWindow(1110,return)</onload> -->
<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<controls>
	
	
		<control type="label" id="12">
			<include>HiddenObject</include>
		</control>
		<control type="radiobutton" id="20">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="21">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="22">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="23">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="24">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="25">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="26">
			<include>HiddenObject</include>
		</control>
	
		<!-- <include>GlobalBackground</include>
		
		<include>HeaderBar</include> -->
		
		<control type="group">
			<!-- <animation effect="fade" start="100" end="10" time="200" tween="sine" condition="true">Conditional</animation> -->
			<control type="group">
				<control type="panel" id="50">
				
				<onfocus condition="!String.IsEmpty(Window(home).Property(partymode))">ReplaceWindow(1110)</onfocus>
				
				<width>70%</width>
				<top>200</top>
				<height>65%</height>
				<right>30</right>
				<onleft>9000</onleft>
				<onup>50</onup>
				<ondown>50</ondown>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic">400</scrolltime>
				
				<itemlayout height="90">
					<control type="group">
						<height>90</height>
					
						<control type="image">
							<visible>true</visible>
							<width>90</width>
							<height>90</height>
							<texture background="true" diffuse="artworkdiffuse/circle.png" fallback="DefaultAddon.png">$INFO[Listitem.Icon]</texture>
							<bordertexture colordiffuse="white">artworkdiffuse/circle.png</bordertexture>
							<bordersize>2</bordersize>
						</control>
						<control type="textbox">
							<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
							<wrapmultiline>true</wrapmultiline>
							<font>CommonTag</font>
							<width>600</width>
							<left>105</left>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color_global_button_text_fo]</textcolor>
							<selectedcolor>white</selectedcolor>
							<label>[B]$INFO[ListItem.Label][/B][CR][COLOR=$VAR[color_global_button_text_nf]]$INFO[ListItem.Label2][/COLOR]</label>
							<label2>test</label2>
						</control>
						
					</control>
				</itemlayout>
				<focusedlayout height="90">
					<control type="group">
						<height>90</height>
						<control type="image">
							<left>50</left>
							<texture background="true">artworkdiffuse/banner.png</texture>
							<colordiffuse>red</colordiffuse>
							
							<bordersize>3</bordersize>
						</control>
						<control type="image">
							<visible>true</visible>
							<width>90</width>
							<height>90</height>
							<texture background="true" diffuse="artworkdiffuse/circle.png">$INFO[Listitem.Icon]</texture>
							<bordertexture colordiffuse="white">artworkdiffuse/circle.png</bordertexture>
							<bordersize>2</bordersize>
						</control>
						<control type="textbox">
							<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
							<wrapmultiline>true</wrapmultiline>
							<font>CommonTag</font>
							<width>600</width>
							<left>105</left>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color_global_button_text_fo]</textcolor>
							<selectedcolor>white</selectedcolor>
							<label>[B]$INFO[ListItem.Label][/B][CR][COLOR=$VAR[color_global_button_text_nf]]$INFO[ListItem.Label2][/COLOR]</label>
							<label2>test</label2>
						</control>
					</control>
				</focusedlayout>
			</control>
				
			</control>
			<control type="scrollbar" id="60">
					<left>-20</left>
					<top>0</top>
					<width>12</width>
					<bottom>0</bottom>
					<onleft>50</onleft>
					<texturesliderbackground />
					<onright>700</onright>
					<animation effect="zoom" end="50,100" time="300" tween="sine" center="-20,0" easing="inout" condition="!Control.HasFocus(60)">conditional</animation>
					<orientation>vertical</orientation>
				</control>
		</control>
		
	</controls>
</window>
