<?xml version="1.0" encoding="utf-8"?>
<window>
	<include content="media_window_attributes" />
	<controls>
	<!-- 	
		
videoplaylist 	WINDOW_VIDEO_PLAYLIST 	10028 	MyPlaylist.xml 
musicplaylist 	WINDOW_MUSIC_PLAYLIST 	10500 	MyPlaylist.xml 

activate window and click by prop (when came from music hub)
	SendClick(musicplaylist/videoplaylist,id)

2 	button 	Select viewtype (list, thumbnail, media info, etc...)
3 	button 	Select sort method (sort by: name, date size, etc...)
4 	togglebutton 	Select sortmode (ascending or descending)
12 	label 	Number of items in the playlist
20 	radiobutton 	Shuffle the playlist
21 	button 	Save the playlist
22 	button 	Clear the playlist
23 	button 	Play the playlist
24 	button 	Play the next item in the playlist
25 	button 	Play the previous item in the playlist
26 	button 	Put the playlist on repeat

-->
	
		<control type="label" id="12">
			<include>HiddenObject</include>
		</control>
		<control type="radiobutton" id="20">
			<include>HiddenObject</include>
		</control>
		<!-- 
		<control type="button" id="21">
			<include>HiddenObject</include>
		</control>
		-->
		<!-- 
		<control type="button" id="22">
			<include>HiddenObject</include>
		</control>
		-->
		<control type="button" id="23">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="24">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="25">
			<include>HiddenObject</include>
		</control>
		<control type="button" id="26">
			<include>HiddenObject</include>
		</control>
	
		<control type="group">
			<visible>!Skin.HasSetting(BlurEnabled)</visible>
			<visible>String.IsEmpty(Window(home).Property(shortcutaction_inprogress))</visible>
			<include>global_background</include>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(BlurEnabled)</visible>
			<visible>String.IsEmpty(Window(home).Property(shortcutaction_inprogress))</visible>
			<include>blurred_background</include>
		</control>
		
		<control type="group">
			<visible>Skin.HasSetting(media_isplaylist_showbgpanel)</visible>
			
			<include content="backgroundbuilding_layer4">
				<param name="width2" value="1640" />
				<param name="width3" value="200" />
			</include>
		</control>		
		
		<control type="panel" id="50">
			<viewtype label="$LOCALIZE[535]">list</viewtype>
			<onfocus condition="String.IsEqual(Window(Home).Property(menucontrol_active),common)">ClearProperty(menucontrol_active,home)</onfocus>
		
			<orientation>vertical</orientation>
			<top>200</top>
			<left>130</left>
			<width>1500</width>
			<preloaditems>4</preloaditems>
			<scrolltime tween="quadratic">400</scrolltime>
			<pagecontrol>60</pagecontrol>
			<height>880</height>
			<top>110</top>
			
			<onleft>menu</onleft>
			<onright condition="!Control.IsVisible(60)">21</onright>
			<onright condition="Control.IsVisible(60)">60</onright>
			
			<itemlayout height="50" condition="true">
				<include content="songsheet_row_container">
					<param name="focsed" value="false"/>
					<param name="text_main" value="$VAR[color_lib_text_secondary]"/>
					<param name="text_secondary" value="$VAR[color_lib_text_secondary]"/>
					<param name="text_accent" value="$VAR[color_lib_text_secondary]"/>
				</include>
			</itemlayout>
			<focusedlayout height="50" condition="true">
				<include content="songsheet_row_container">
					<param name="focsed" value="true"/>
					<param name="text_main" value="$VAR[color_lib_text_main]"/>
					<param name="text_secondary" value="$VAR[color_lib_text_secondary]"/>
					<param name="text_accent" value="$VAR[color_lib_accent]"/>
				</include>
			</focusedlayout>
		</control>
			
		
		<control type="grouplist">
			<orientation>vertical</orientation>
			<left>1800</left>
			<width>100</width>
			<height>100%</height>
			<itemgap>50</itemgap>
			<align>center</align>
			
			<onleft condition="!Control.IsVisible(60)">50</onleft>
			<onleft condition="Control.IsVisible(60)">60</onleft>
			<onright>50</onright>
			
			<control type="button" id="21">
				<description>Save the playlist</description>
				<texturefocus colordiffuse="$VAR[color_lib_text_main]">buttons/enter.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[color_lib_text_secondary]">buttons/enter.png</texturenofocus>
				<include>Animation_Item_Focus</include>
				<width>60</width>
				<height>60</height>
				<label />
			</control>
			<control type="button" id="22">
				<description>Clear the playlist</description>
				<texturefocus colordiffuse="$VAR[color_lib_text_main]">buttons/cleanup.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[color_lib_text_secondary]">buttons/cleanup.png</texturenofocus>
				<include>Animation_Item_Focus</include>
				<left>5</left>
				<width>50</width>
				<height>50</height>
				<label />
			</control>
			
		</control>
		
		<include content="HeaderBar">
			<param name="HasBGPanel" value="true" />
		</include>
		
		<include content="PreMenucontrol" />
		
		<control type="group">
			<animation effect="slide" start="-450,0" end="0,0" time="300" tween="cubic" easing="inout">VisibleHidden</animation>
			<visible>String.IsEqual(Window(Home).Property(menucontrol_active),common)</visible>
			<include content="menucontrol_global" condition="String.IsEmpty(Window(home).Property(shortcutaction_inprogress))" />
		</control>
		
		<control type="scrollbar" id="60">
			<animation effect="fade" start="100" end="0" time="250" condition="Control.HasFocus(600)">conditional</animation>
			<showonepage>true</showonepage>
			<right>238</right>
			<top>160</top>
			<height>74%</height>
			<onup>60</onup>
			<ondown>60</ondown>
			<onleft>50</onleft>
			<onright>21</onright>
		</control>
		
		<include content="swan_debug_overlay">
			<param name="nested_debuginfo" value=""/>
		</include>
	</controls>
</window>
