<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="view_520">
		<!-- start music -->
		<control type="group">
			<visible>Control.IsVisible(520)</visible>
			
			<control type="image">
				<visible>false</visible>
				<texture colordiffuse="ff131313">colors/white80.png</texture> 
				<aspectratio scalediffuse="true" align="left" aligny="top">stretch</aspectratio>
			</control>
			
			<control type="group">
				<description>metadata n button top</description>
				<visible>Control.IsVisible(520)</visible>
				<orientation>horizontal</orientation>
				<itemgap>50</itemgap>
				<left>150</left>
				<top>200</top>
				<height>380</height>
				
				
				<control type="image">
					<height>350</height>
					<width>350</width>
					<bordersize>20</bordersize>
					<bordertexture colordiffuse="$VAR[color_lib_infopanel_frame]">colors/white.png</bordertexture>
					<texture diffuse="colors/white80.png">$INFO[ListItem.Icon]</texture> 
					<aspectratio scalediffuse="true" align="left" aligny="top">keep</aspectratio>
				</control>
				
				<control type="group">
					<description>metadata</description>
					<visible>Control.IsVisible(520)</visible>
					<orientation>vertical</orientation>
					<aligny>top</aligny>
					<itemgap>10</itemgap>
					<top>35</top>
					<left>380</left>
					<width>1200</width>
					<height>30</height>
					<control type="grouplist">
						<visible>Control.IsVisible(520)</visible>
						<height>295</height>
						<align>left</align>
						<orientation>vertical</orientation>
						
						<control type="label">
							<height>40</height>
							<label>$INFO[ListItem.Artist]</label>
							<font>notosans_26_semibold</font>
						
							
						</control>
						<control type="label">
							<height>40</height>
							<label>listitem.dbtype</label>
							<font>notosans_16_bold</font>
						</control>
						<control type="textbox">
							<height>120</height>
							<width>60%</width>
							<label>$VAR[plot]</label>
							<font>notosans_22_regular_lowlined</font>
							<!-- <font>liberationsans_23_bold</font> -->
						</control>
						
						<!-- another listing - flags 
ListItem.DiscTitle 	The disc title of the currently selected album or song 	v19
ListItem.TotalDiscs 	The total amount of discs belonging to an album 
	ListItem.Duration[(format)] 					
						-->
						<control type="label">	
						<!-- container.content.albums $INFO[ListItem.Duration(hh:mm)]
						,$INFO[container.content] -->
							<top>10</top>
							<height>20</height>
							<align>left</align>
							<font>notosans_16_bold</font>
							<label>$INFO[container.numitems, $LOCALIZE[132]:,]$INFO[ListItem.Duration(hh:mm),     $LOCALIZE[180]: ,]</label>
						</control>
						
						
						
					</control>
					
					<control type="grouplist">
						<top>245</top>
						<visible>Control.IsVisible(520)</visible>
						<animation effect="slide" start="0,0" end="0,-10" time="0" condition="true">conditional</animation>
						<!-- <animation effect="fade" start="100" end="0" time="300" easing="inout" condition="!Control.HasFocus($PARAM[belonging_containerid])">conditional</animation> -->
						<description>try using control id is enabled + prop is true for content call auto disable control via on focus or use hidden window - booth should could be usable by using send click</description>
						<width>1700</width>
						<height>80</height>
						<align>left</align>
						<orientation>horizontal</orientation>
						
					
					<!-- set prop onclick slide down to show info of clicked item -->
					
						<onup></onup>
						<ondown></ondown>
						<itemgap>10</itemgap>
						
						
						<control type="radiobutton" id="52001">
							<include content="HUB_ContainerButtons">
								<description>Order Direction</description>
								<param name="texture" value="defaultmusicvideotitle.png" />
							</include>
							<onclick>SendClick(4)</onclick>
							<onclick>Notification([B]$INFO[Container.Content][/B] [I]Sort Order[/I],$INFO[Container.SortOrder])</onclick>
							<onclick>SetFocus(520)</onclick>
						</control>
						<control type="radiobutton" id="52002">
							<include content="HUB_ContainerButtons">
								<description>Method</description>
								<param name="texture" value="defaultmusicvideotitle.png" />
							</include>
							<onclick>SendClick(3)</onclick>
							<onclick>Notification([B]$INFO[Container.Content][/B] [I]Sort Method[/I],$INFO[Container.SortMethod])</onclick>
							<onclick>SetFocus(520)</onclick>
								
						</control>
						
						
						<!-- info, play , play random,  -->
						
						
						<control type="radiobutton" id="52004">
							<include content="HUB_ContainerButtons">
								<param name="texture" value="defaultaddoninfoprovider.png" />
							</include>
							<onclick>SetFocus(520)</onclick>
							<onclick>Action(info)</onclick>
						</control>
						<control type="radiobutton" id="52005">
							<include content="HUB_ContainerButtons">
								<param name="texture" value="defaultmusicplaylists.png" />
							</include>
						</control>
					</control>
				</control>
				
			
			</control>
			<!-- placeholder -->
			<control type="panel" id="520">
				<description>stored playlists</description>
				<preloaditems>2</preloaditems>
				<orientation>vertical</orientation>
				
				<top>570</top>
				<left>150</left>
				<width>1700</width>
				<height>450</height>
				<onleft>menu</onleft>
				<onup>41</onup>
				<ondown>42</ondown>
				
				<viewtype label="music list">icon</viewtype>
				<scrolltime tween="quadratic">400</scrolltime>
				<itemlayout height="150" width="290" condition="true">
					<control type="group">
						<width>283</width>
						<height>140</height>
						<include content="universal_itemlayout">
							<param name="artwork_bordercolor" value="$VAR[color_universalcontainer_itemframe_nf]" />
							<param name="artwork" value="landscape" />
							<param name="artwork_focusoverlay_visible" value="false" />
							<param name="infotags_visible" value="false" />
							<param name="infotags_bgpanel_visible" value="false" />
							<param name="infotags_autoscroll" value="false" />
							<param name="artwork_bg_bordersize" value="6" />
							<param name="infotags_bgpanel_color" value="$VAR[color_universalcontainer_itemtag_bgpanel_nf]" />
							<param name="infotags_label1_color" value="$VAR[color_universalcontainer_itemtag_label1_nf]" />
							<param name="infotags_label2_color" value="$VAR[color_universalcontainer_itemtag_label2_nf]" />
							<param name="artwork_diffuse_themed" value="true" />
							<param name="artwork_diffuse_override" value="false" />
							<param name="artwork_overlay_landscape" value="![$EXP[IsEpisode]]" />
						</include>
					</control>
				</itemlayout>
				<focusedlayout height="150" width="290" condition="true">
					<include content="hiddenbutton_manage_skinpropertys" />
					<control type="group">
						<width>283</width>
						<height>140</height>
						<include>Animation_Item_Focus</include>
						<control type="group">
							<include content="universal_itemlayout">
								<param name="artwork_bordercolor" value="$VAR[color_universalcontainer_itemframe_fo]" />
								<param name="artwork" value="landscape" />
								<param name="artwork_focusoverlay_visible" value="true" />
								<param name="infotags_visible" value="false" />
								<param name="infotags_bgpanel_visible" value="false" />
								<param name="infotags_autoscroll" value="true" />
								<param name="artwork_bg_bordersize" value="4" />
								<param name="infotags_bgpanel_color" value="$VAR[color_universalcontainer_itemtag_bgpanel_fo]" />
								<param name="infotags_label1_color" value="$VAR[color_universalcontainer_itemtag_label1_fo]" />
								<param name="infotags_label2_color" value="$VAR[color_universalcontainer_itemtag_label2_fo]" />
								<param name="artwork_diffuse_themed" value="true" />
								<param name="artwork_diffuse_override" value="false" />
								<param name="artwork_overlay_landscape" value="![$EXP[IsEpisode]]" />
							</include>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
		
		
	
	</include>
</includes>
