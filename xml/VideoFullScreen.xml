<?xml version="1.0" encoding="utf-8"?>
<window>
<!-- 	1.58 VideoFullScreen.xml

fullscreenvideo 	WINDOW_FULLSCREEN_VIDEO 	12005 	VideoFullScreen.xml 
fullscreengame	 	WINDOW_FULLSCREEN_GAME 		?? 		VideoFullScreen.xml 

ID 	Type 	Description
1 	label 	Numpad seek label
10 	label 	Line 1
11 	label 	Line 2
12 	label 	Line 3  -->
	<defaultcontrol />
	
	<onload condition="!String.IsEmpty(Window(home).Property(videofullcreen_pvrgrid))">ClearProperty(videofullcreen_pvrgrid,home)</onload>
	<onload condition="!Player.HasGame + [Skin.HasSetting(DisableSubtitles) + [VideoPlayer.SubtitlesEnabled + VideoPlayer.HasSubtitles]]">ShowSubtitles</onload>
	<onload condition="Skin.HasSetting(ShowOSD_OnStart) + String.IsEmpty(Window(home).Property(forceopen))">activatewindow(videoosd)</onload>
	<onload condition="Skin.HasSetting(ShowPlot_OnStart) + !Player.HasGame + String.IsEmpty(Window(home).Property(forceopen))">SetProperty(ShowOSD_Plot,true,home)</onload>
	<onload condition="Skin.HasSetting(ShowPlot_OnStart) + !Player.HasGame + String.IsEmpty(Window(home).Property(forceopen))">AlarmClock(ShowOSD_Plot,ClearProperty(ShowOSD_Plot,home),00:04,silent)</onload>
	<onload condition="!String.IsEmpty(Window(home).Property(forceopen))">ClearProperty(forceopen,home)</onload>
	<controls>
	
	<control type="image" id="99">
		<description>cond dim screen,may add option to dimm on idle time pause  - ' | [Player.Paused + System.IdleTime(60)] ' dialog(videotimeseek|fullscreenlivetvinput)</description>
		<visible>[Player.Caching | !String.IsEmpty(PVR.ChannelNumberInput) | !String.IsEmpty(Player.SeekNumeric)]</visible>
		<animation effect="fade" end="100" time="200">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
		<animation effect="fade" end="100" time="200">Visible</animation>
		<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
		<texture colordiffuse="$VAR[color_osdvideo_dimmedbg]">colors/white70.png</texture>
	</control>
	
	<control type="group" id="1">
		<description> busy spinner Hide Optional</description>
		<visible>!Skin.HasSetting(HideBusyOSD) + [Player.Caching + Integer.IsGreater(Player.CacheLevel,0)] + !Window.IsVisible(busydialog)</visible>
		<animation effect="fade" delay="300" time="200">Visible</animation>
		<animation effect="fade" delay="200" time="150">Hidden</animation>
		<control type="image" id="1">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>120</width>
			<height>120</height>
			<texture colordiffuse="color_osdvideo_busyspinner">special://skin/extras/busy/netflixorigin.apng</texture>
			<aspectratio align="center" aligny="center">keep</aspectratio>
		</control>
		<control type="label" id="1">
			<description>maybe buggy</description>
			<top>0</top>
			<bottom>0</bottom>
			<left>0</left>
			<right>0</right>
			<font>font23_title</font>
			<label>$INFO[Player.CacheLevel,, %]</label>
			<align>center</align>
			<aligny>center</aligny>
		</control>
	</control>
	
	<control type="label" id="99">	
		<description>numeric Input</description>
		<top>0</top>
		<bottom>0</bottom>
		<left>0</left>
		<right>0</right>
		<font>font_Montserrat_38_extrabold</font>
		<label>$VAR[Fullscreen_Numeric_Input]</label>
		<align>center</align>
		<aligny>center</aligny>
	</control>

	<control type="group" id="0">
		<description>native gui infos</description>
		<left>0</left>
		<visible>Control.IsVisible(10) | Control.IsVisible(11) | Control.IsVisible(12)</visible>
		<control type="grouplist">
			<left>60</left>
			<top>60</top>
			<orientation>vertical</orientation>
			<control type="label" id="10">
				<description>row 1 label</description>
				<width>auto</width>
				<height>40</height>
				<align>left</align>
				<aligny>top</aligny>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="11">
				<description>row 2 label</description>
				<height>40</height>
				<width>auto</width>
				<align>left</align>
				<aligny>top</aligny>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="12">
				<description>row 3 label</description>
				<width>auto</width>
				<height>40</height>
				<align>left</align>
				<aligny>top</aligny>
				<textcolor>white</textcolor>
			</control>
		</control>
	</control>
	
	<include content="VideoFullscreen_OSD" condition="!Player.HasGame" />
	
	<control type="textbox" id="99">
		<visible>Skin.HasSetting(SwanDebug)</visible>
		<font>NotoSans_bold_20</font>
		<aligny>top</aligny>
		<align>right</align>
		<top>10</top>
		<right>15</right>
		<textcolor>red</textcolor>
		<label>System.BuildVersion:     $INFO[System.BuildVersion,[B],[/B]]
System.BuildDate:     $INFO[System.BuildDate]

$LOCALIZE[31030] :     $INFO[system.memory(used)] [B]/[/B] $INFO[system.memory(total)]       $INFO[system.memory(used.percent)]
$LOCALIZE[13271]      $INFO[System.CPUUsage]
$INFO[System.GPUTemperature,System.GPUTemperature :     ,]
Property(xmlfile) :     $INFO[Window.Property(xmlfile)]
System.CurrentWindow :     $INFO[System.CurrentWindow]
System.CurrentControl :     $INFO[System.CurrentControl]
System.CurrentControlID :     $INFO[System.CurrentControlID]
$INFO[System.Progressbar,System.Progressbar :     ,]
System.InternetState :     $INFO[System.InternetState]
Network.IPAddress :     $INFO[Network.IPAddress]    
$INFO[Player.Icon]

VideoPlayer.Offset(1).* will be filled when items playlist.add() done
	   $INFO[VideoPlayer.Offset(1).studio]
	   $INFO[VideoPlayer.Offset(1).dbid]
	   $INFO[VideoPlayer.Offset(1).mpaa]
</label>
</control>
			
	</controls>
</window>
