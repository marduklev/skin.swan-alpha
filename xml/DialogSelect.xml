<?xml version="1.0" encoding="utf-8"?>
<window>
    <include condition="![Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)]" content="i_nested">
		<defaultcontrol always="true">3</defaultcontrol>
	</include>
	<include condition="Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)" content="i_nested">
		<defaultcontrol always="true">11</defaultcontrol>
	</include>
	<onload condition="String.IsEqual(Window(home).Property(addon_forcedaction),dialogselect)">SetProperty(addon_forcedaction,done,home)</onload>
	<onunload condition="!String.IsEmpty(Window(home).Property(addon_forcedaction))">Action(back)</onunload>
	<onunload condition="!String.IsEmpty(Window(home).Property(shortcutaction_inprogress))">ClearProperty(shortcutaction_inprogress,home)</onunload>
	<onunload condition="!String.IsEmpty(Window(home).Property(shortcutitem_nr))">ClearProperty(shortcutitem_nr,home)</onunload>
	
	<include condition="String.IsEmpty(Window(home).Property(dialog_select_currentthumb)) + String.IsEmpty(Window(home).Property(dialog_select))">Animation_OpenClose_FadeZoom</include>
    
	<onunload condition="!string.isempty(Window(home).Property(sortmedia_change))">AlarmClock(delayedfocus,SetFocus($INFO[window.property(viewid)],0,absolute),00:00,silent)</onunload>
	<onunload condition="!string.isempty(Window(home).Property(sortmedia_change))">clearproperty(sortmedia_change,home)</onunload>
	
	<menucontrol>8000</menucontrol>
	
<!-- 

3 	container	List of available options
6 	container	List of available add-ons
11   container	List with game video thumbnails

5	button	OK (on multiple selection) or Manual/Get More... button

7	button	Cancel button
8	button	Add/Get More... button

1	label	Heading label
2	label	Number of items in the list
12  textbox	Description of the currently-selected video filter

 selectdialog - get diff layout if previous action was "SetRating" -->
	
	<controls>
        <control type="label" id="1">
            <include content="HiddenObject" />
        </control>
        <control type="label" id="2">
            <include content="HiddenObject" />
        </control>
        <control type="label" id="12">
            <include content="HiddenObject" />
        </control>

        <control type="group">
            <visible>!Window.IsVisible(yesnodialog) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(numericinput)</visible>
			<control type="group">
				<include content="DialogSelect_Container">
					<param name="id" value="3" />
					<param name="header" value="$INFO[control.getlabel(1)]" />
					<param name="fanart_panel" value="false" />
					<param name="onleft" value="8000" />
				</include>
			</control>
			<control type="group">
				<include content="DialogSelect_Container">
					<param name="id" value="6" />
					<param name="header" value="$INFO[control.getlabel(1)]" />
					<param name="fanart_panel" value="true" />
					<param name="fanart" value="$INFO[listitem.Icon]" />
					<param name="onleft" value="8000" />
				</include>
            </control>
			<control type="group">
               <description>id11 seem to be always in visible true state</description>
               <visible>Control.IsVisible(11) + [Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)]</visible>
               <include content="DialogSelect_Container">
					<param name="id" value="11" />
					<param name="header" value="$INFO[control.getlabel(1)]" />
					<param name="fanart_panel" value="true" />
					<param name="fanart" value="$INFO[listitem.Icon]" />
					<param name="onleft" value="8000" />
				</include>
            </control>
			
			<control type="image">	
				<visible>Control.IsVisible(5) | Control.IsVisible(7) | Control.IsVisible(8)</visible>
				<bottom>0</bottom>
				<height>100</height>
				<bordersize>0,2,0,0</bordersize>
				<bordertexture>colors/black.png</bordertexture>
				<texture colordiffuse="$VAR[color_global_background_layer2]">colors/white.png</texture>
			 </control>
            <control type="grouplist" id="8000">
				<bottom>0</bottom>
				<height>80</height>
                <align>center</align>
                <orientation>horizontal</orientation>
                <itemgap>75</itemgap>
                <onup condition="![Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)] + Control.IsVisible(3)">3</onup>
                <ondown condition="![Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)] + Control.IsVisible(3)">3</ondown>
				<onup condition="![Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)] + Control.IsVisible(6)">6</onup>
                <ondown condition="![Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)] + Control.IsVisible(6)">6</ondown>
				<onup condition="Control.IsVisible(11) + [Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)]">11</onup>
                <ondown condition="Control.IsVisible(11) + [Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)]">11</ondown>
				<onleft>8000</onleft>
                <onright>8000</onright>
                <control type="button" id="5">
					<include>Animation_Item_Focus</include>
                    <description>Accept</description>
					<label />
                    <left>0</left>
                    <width>auto</width>
                    <height>60</height>
					<font>montserrat_22_semibold</font>
					<visible>!String.IsEmpty(Control.GetLabel(5))</visible>
                </control>
				<control type="button" id="8">
					<include>Animation_Item_Focus</include>
					<description>matrix multislect</description>
					<label />
					<font>montserrat_22_semibold</font>
					<width>auto</width>
					<height>60</height>
					<visible>!String.IsEmpty(Control.GetLabel(8))</visible>
				</control>
				<control type="button" id="7">
					<include>Animation_Item_Focus</include>
                    <description>Close</description>
					<label />
					<width>auto</width>
                    <height>60</height>
                    <visible>!String.IsEmpty(Control.GetLabel(7))</visible>
					<font>montserrat_22_semibold</font>
				</control>
			</control>
		</control>
		<include condition="Skin.HasSetting(window_frame)" content="window_frame" />
	</controls>
</window>