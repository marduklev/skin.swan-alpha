<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">3</defaultcontrol>
	<onload condition="String.IsEqual(Window(home).Property(addon_forcedaction),dialogselect)">SetProperty(addon_forcedaction,done,home)</onload>
	<onunload condition="!String.IsEmpty(Window(home).Property(addon_forcedaction))">Action(back)</onunload>
	
	<onunload condition="!String.IsEmpty(Window(home).Property(shortcutaction_inprogress))">ClearProperty(shortcutaction_inprogress,home)</onunload>
	<onunload condition="!String.IsEmpty(Window(home).Property(shortcutitem_nr))">ClearProperty(shortcutitem_nr,home)</onunload>
	
	
	<include>Animation_OpenClose_Slide</include>
    <menucontrol>8000</menucontrol>
	
	<!-- selectdialog - get diff layout if previous action was "SetRating" -->
	
	<controls>
        <control type="group">
            <include content="dialog_background_triplepanel" />
        </control>
            
        <control type="label" id="1">
            <include content="HiddenObject" />
        </control>
        <control type="label" id="2">
            <include content="HiddenObject" />
        </control>
        <control type="label" id="12">
            <include content="HiddenObject" />
        </control>

        <control type="group">
            <visible>!Window.IsVisible(yesnodialog) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(numericinput)</visible>
			<include content="Dialog_CommonInfo">
                <param name="Def_Icon" value="$VAR[image_dialogselect]" />
                <param name="Header_label" value="$INFO[Control.GetLabel(1),[B],[/B]]" />
                <param name="Item_Description" value="$INFO[ListItem.AddonName,[B]$LOCALIZE[551]:[/B] ,]$INFO[ListItem.AddonCreator,[CR][B]$LOCALIZE[21863]:[/B] ,]$INFO[ListItem.AddonDescription,[CR][CR][B]$LOCALIZE[31171][/B][CR],]" />
            </include>
            <control type="group">
                <visible>Control.IsVisible(3)</visible>
                <include condition="false" content="Dialog_Containers">
                    <param name="id" value="3" />
                    <param name="onleft" value="8000" />
                    <param name="icon_visible" value="true" />
                    <param name="layout_height" value="60" />
                </include>
				<include content="DialogSelect_Container" condition="true">
					<param name="id" value="3" />
					<param name="icon" value="defaultaddonservice.png" />
					<param name="fanart_panel" value="false" />
					<param name="onleft" value="8000" />
				</include>
				
				
            </control>
            <control type="group">
                <visible>Control.IsVisible(6)</visible>
                <include condition="false" content="Dialog_Containers">
                    <param name="id" value="6" />
                    <param name="Container_Height" value="63%" />
                    <param name="onleft" value="8000" />
                    <param name="icon_visible" value="true" />
                    <param name="layout_height" value="110" />
                </include>
				<include content="DialogSelect_Container" condition="true">
					<param name="id" value="6" />
					<param name="icon" value="$INFO[Container(6).ListItem.Icon]" />
					<param name="fanart_panel" value="false" />
					<param name="onleft" value="8000" />
				</include>
            </control>
            <control type="group">
                <description>use Control.IsVisible($PARAM[id]) cause false visible</description>
                <visible>Control.IsVisible(11)</visible>
                <include content="Dialog_Containers">
                    <param name="id" value="11" />
                    <param name="onleft" value="8000" />
                    <param name="icon_visible" value="true" />
                    <param name="layout_height" value="110" />
                </include>
            </control>
			
			 <control type="image">	
				<bottom>0</bottom>
				<height>100</height>
				<bordersize>0,2,0,0</bordersize>
				<bordertexture>colors/black.png</bordertexture>
				<texture colordiffuse="$VAR[color_global_background_layer2]">colors/white.png</texture>
			 </control>
            <control type="grouplist" id="8000">
				<bottom>0</bottom>
				<height>80</height>
                <align>center</align>
                <orientation>horizontal</orientation>
                <itemgap>75</itemgap>
                <onup condition="Control.IsVisible(6)">6</onup>
                <onup condition="!Control.IsVisible(6)">3</onup>
                <ondown condition="Control.IsVisible(6)">6</ondown>
                <ondown condition="!Control.IsVisible(6)">3</ondown>
                <onleft>8000</onleft>
                <onright>8000</onright>
                <control type="button" id="5">
					<include>Animation_Item_Focus</include>
                    <description>Accept</description>
                    <left>0</left>
                    <label />
					<width>auto</width>
                    <height>60</height>
					<font>montserrat_22_semibold</font>
                </control>
				<control type="button" id="8">
					<include>Animation_Item_Focus</include>
					<description>matrix multislect</description>
					<label />
					<font>montserrat_22_semibold</font>
					<width>auto</width>
					<height>60</height>
					<visible>!String.IsEmpty(Control.GetLabel(8))</visible>
				</control>
				<control type="button" id="7">
					<include>Animation_Item_Focus</include>
                    <description>Close</description>
                    <label />
					<width>auto</width>
                    <height>60</height>
                    <visible>!String.IsEmpty(Control.GetLabel(7))</visible>
					<font>montserrat_22_semibold</font>
				</control>
			</control>
		</control>
	</controls>
</window>