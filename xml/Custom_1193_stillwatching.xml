	<visible>Skin.String(stillwatching_idle_action)</visible>
	<visible>Window.IsActive(fullscreenvideo) + System.IdleTime(600) + Player.Paused</visible>
	
	<onload condition="String.IsEqual(Skin.String(stillwatching_idle_action),stop)">AlarmClock(stillwatching_timer,PlayerControl(stop),00:30,silent)</onload>
	<onload condition="String.IsEqual(Skin.String(stillwatching_idle_action),quit)">AlarmClock(stillwatching_timer,Quit(),00:30,silent)</onload>
	<onload condition="String.IsEqual(Skin.String(stillwatching_idle_action),hibernate)">AlarmClock(stillwatching_timer,Hibernate(),00:30,silent)</onload>
	<onload condition="String.IsEqual(Skin.String(stillwatching_idle_action),powerdown)">AlarmClock(stillwatching_timer,Powerdown(),00:30,silent)</onload>
		
		<onload condition="String.IsEqual(Skin.String(stillwatching_idle_action),hibernate) | String.IsEqual(Skin.String(stillwatching_idle_action),powerdown)">AlarmClock(temp_close,Dialog.Close(all),00:30,silent)</onload>
	
	
	<onunload>CancelAlarm(stillwatching_timer,silent)</onunload>
	<onunload condition="System.HasAlarm(temp_close)">CancelAlarm(temp_close,silent)</onunload>
	
