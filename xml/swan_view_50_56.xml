	<include name="listcontainer_infolayout">
		<nested />
		<control type="image">
			<description>centered folderback</description>
			<visible>String.IsEqual(ListItem.Label,..) + Control.IsVisible(56)</visible>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>90</width>
			<height>90</height>
			<texture colordiffuse="$VAR[color_lib_text_main]">defaultfolderback.png</texture>
			<bordertexture colordiffuse="$VAR[color_lib_text_main]">artworkdiffuse/circleborder.png</bordertexture>
			<aspectratio scalediffuse="false" aligny="center" align="left">scale</aspectratio>
			<bordersize>2</bordersize>
		</control>
		<control type="group">
			<control type="image">
				<description>just 50 temp workaround for def white or very bright border, may an if not cond needed def icons</description>
				<width>90</width>
				<height>90</height>
				<texture colordiffuse="cc181818">artworkdiffuse/circle.png</texture>
				<bordersize>6</bordersize>
				<visible>String.Contains(ListItem.Icon,default)</visible>
				<visible>Control.IsVisible(50)</visible>
			</control>
			<control type="image">
				<centertop>50%</centertop>
				<left>$PARAM[artwork_posx]</left>
				<centertop>50%</centertop>
				<description>get half cutted circle for icon border studio or thumb midgrey just as workaround</description>
				<width>$PARAM[artwork_w]</width>
				<height>$PARAM[artwork_h]</height>
				<texture background="true" diffuse="artworkdiffuse/$PARAM[artwork].png">$VAR[View_$PARAM[id]_listitem_artwork]</texture>
				<bordertexture colordiffuse="$VAR[color_lib_text_main]">artworkdiffuse/$PARAM[artwork]border.png</bordertexture>
				<aspectratio scalediffuse="false" aligny="center" align="center">scale</aspectratio>
				<bordersize>2</bordersize>
			</control>
			<control type="image">
				<description>dont put gif n apng to xbt compression</description>
				<centertop>50%</centertop>
				<left>14</left>
				<width>60</width>
				<height>60</height>
				<texture>special://skin/extras/song_gifs/playingsong.gif</texture>
				<colordiffuse>$VAR[color_lib_text_main]</colordiffuse>
				<bordersize>4</bordersize>
				<visible>ListItem.IsPlaying</visible>
				<bordertexture colordiffuse="55000000">artworkdiffuse/circle.png</bordertexture>
			</control>
			<include content="List_2RowInfo">
				<param name="left" value="$PARAM[info_posy]" />
				<param name="right" value="250" />
				<param name="headlinefont" value="$PARAM[info_headlinefont]" />
			</include>
			<control type="label">
				<description>if needed width was 200</description>
				<font>roboto_22_condensedregular</font>
				<right>90</right>
				<left>$PARAM[info_posy]</left>
				<align>$PARAM[info_dur_alignx]</align>
				<bottom>20</bottom>
				<height>20</height>
				<textcolor>$VAR[color_lib_text_main]</textcolor>
				<label>$VAR[ListItemDuration]</label>
			</control>
			<include content="stars_rating">
				<description>56 not placed and adjusted like wished</description>
				<top>5%</top>
				<right>$PARAM[rating_offset_right]</right>
				<param name="alignx" value="right" />
				<param name="width" value="$PARAM[rating_width]" />
				<param name="colordiffuse" value="$PARAM[highlightcolor]" />
			</include>		
			<include content="ListItem_Indicators" description="56 not placed and adjusted like wished">
				<param name="show_unwatchedindicator" value="true" />
				<param name="watched_size" value="$PARAM[indicator_watchedstate_size]" />
				<param name="folderind_size" value="$PARAM[indicator_folderind_size]" />
			</include>
		</control>
	</include>
	
	
	<include name="list_landscape_info">
		<control type="group">
			<visible>Skin.HasSetting(View_56_Prefer_CircleArt)</visible>
			<visible>!String.StartsWith(ListItem.Icon,default) | String.EndsWith(ListItem.Icon,folder.png)</visible>
			<left>10</left>
			<width>430</width>
			<height>280</height>
				
			<control type="image">
				<width>200</width>
				<height>200</height>
				<top>10</top>
				<left>150</left>
				<texture background="true" diffuse="artworkdiffuse/circle.png">$VAR[ImageLayout_circle]</texture>
				<bordertexture>artworkdiffuse/circleborder.png</bordertexture>
				<aspectratio scalediffuse="false" aligny="center" align="center">scale</aspectratio>
				<bordersize>2</bordersize>
				<visible>![Container.Content(studios) | String.IsEqual(ListItem.dbtype,studio)]</visible>
			</control>
			<control type="image">
				<visible>![[Container.Content(Seasons) | String.IsEqual(ListItem.dbtype,season)] | [Container.Content(Episodes) | String.IsEqual(ListItem.dbtype,episode)]]</visible>
				<visible>
					!String.IsEmpty(ListItem.Art(tvshow.clearlogo)) | 
					!String.IsEmpty(ListItem.Art(clearlogo)) | 
					!String.IsEmpty(ListItem.Art(artist.clearlogo)) | 
					!String.IsEmpty(ListItem.Art(albumartist.clearlogo))
				</visible>
				<width>400</width>
				<height>100</height>
				<top>170</top>
				<left>50</left>
				<right>10</right>
				<texture background="true">$VAR[ListItemClearLogo]</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>
			<control type="textbox">
				<description>43.3 1 row</description>
				<visible>[[Container.Content(Seasons) | String.IsEqual(ListItem.dbtype,season)] | [Container.Content(Episodes) | String.IsEqual(ListItem.dbtype,episode)]] | 
					String.IsEmpty(ListItem.Art(tvshow.clearlogo)) +
					String.IsEmpty(ListItem.Art(artist.clearlogo)) +
					String.IsEmpty(ListItem.Art(albumartist.clearlogo)) +
					String.IsEmpty(ListItem.Art(clearlogo))
				</visible>
				<visible>!String.IsEqual(ListItem.label,..)</visible>
				<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[infotags_autoscroll]</autoscroll>
				<top>170</top>
				<left>40</left>
				<right>40</right>
				<width>400</width>
				<wrapmultiline>true</wrapmultiline>
				<height max="80">auto</height>
				<font>roboto_25_condensedbold</font>
				<align>center</align>
				<aligny>top</aligny>
				<textcolor>$VAR[color_lib_widgetitem_itemtag_label1_fo]</textcolor>
				<selectedcolor>white</selectedcolor>
				<label>$INFO[ListItem.Label,[B],[/B]]</label>
			</control>
		</control>
		<control type="textbox">
			<autoscroll delay="2000" time="5000" repeat="1500">$PARAM[infotags_autoscroll]</autoscroll>
			<description>plot</description>
			<font>notosans_22_bold_highlined</font>
			<right>250</right>
			<left>500</left>
			<top>100</top>
			<bottom>70</bottom>
			<align>justify</align>
			<aligny>top</aligny>
			<textcolor>$VAR[color_lib_text_main]</textcolor>
			<selectedcolor>$VAR[color_lib_selected]</selectedcolor>
			<label>$VAR[plot]</label>
		</control>
	</include>
	
	<variable name="View_50_listitem_artwork">
		<value condition="[!String.IsEmpty(ListItem.Art(album.discart)) + [Container.Content(songs) | String.IsEqual(ListItem.dbtype,song)]]">$INFO[ListItem.Art(album.discart)]</value>
		<value>$VAR[ImageLayout_poster]</value>
	</variable>
	<variable name="View_56_listitem_artwork">
		<value condition="Skin.HasSetting(View_56_Prefer_CircleArt)"></value>
		<value condition="String.IsEqual(ListItem.Label,..)"></value>
		<value condition="Skin.HasSetting(View_56_Prefer_Discart_Song) + !String.IsEmpty(ListItem.Art(album.discart)) + String.IsEqual(ListItem.dbtype,song)">$INFO[ListItem.Art(album.discart)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(discart)) + [[String.IsEqual(ListItem.dbtype,album) + Skin.HasSetting(View_56_Prefer_Discart_Album)] | [Window.IsActive(videos) + Skin.HasSetting(View_56_Prefer_Disc_Video)]]">$INFO[ListItem.Art(discart)]</value>
		<value condition="Skin.HasSetting(View_56_Prefer_clearart) + !String.IsEmpty(ListItem.Art(clearart))">$INFO[ListItem.Art(clearart)]</value>
		<value condition="Skin.HasSetting(View_56_Prefer_clearart) + String.IsEmpty(ListItem.Art(clearart)) + !String.IsEmpty(ListItem.Art(characterart))">$INFO[ListItem.Art(characterart)]</value>
		<value condition="[Skin.HasSetting(View_56_Prefer_clearlogo) | [Skin.HasSetting(View_56_Prefer_clearart) + String.IsEmpty(ListItem.Art(clearart)) + String.IsEmpty(ListItem.Art(characterart))]] + !String.IsEmpty(ListItem.Art(clearlogo))">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="Skin.HasSetting(View_56_Prefer_animatedfanart) + !String.IsEmpty(ListItem.Art(animatedfanart))">$INFO[ListItem.Art(animatedfanart)]</value>
		<value>$VAR[ImageLayout_landscape]</value>
	</variable>	
	
	<variable name="View_50_ForcedArtwork">
		<value condition="!String.IsEmpty(ListItem.Art(album.discart)) + Skin.HasSetting(View_50_Prefer_Discart_Song) + String.IsEqual(ListItem.dbtype,song)">$INFO[ListItem.Art(album.discart)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(discart)) + [[Skin.HasSetting(View_50_Prefer_Discart_Album) + String.IsEqual(ListItem.dbtype,album)] | [Window.IsActive(videos) + Skin.HasSetting(View_50_Prefer_Disc_Video)]]">$INFO[ListItem.Art(discart)]</value>
		<value condition="Skin.HasSetting(View_50_Prefer_clearart) + !String.IsEmpty(ListItem.Art(clearart))">$INFO[ListItem.Art(clearart)]</value>
		<value condition="Skin.HasSetting(View_50_Prefer_clearart) + [String.IsEmpty(ListItem.Art(clearart)) + !String.IsEmpty(ListItem.Art(characterart))]">$INFO[ListItem.Art(characterart)]</value>
		<value condition="[Skin.HasSetting(View_50_Prefer_clearlogo) | [Skin.HasSetting(View_50_Prefer_clearart) + [String.IsEmpty(ListItem.Art(clearart)) + String.IsEmpty(ListItem.Art(characterart))]]] + !String.IsEmpty(ListItem.Art(clearlogo))">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="Skin.HasSetting(View_50_Prefer_landscape) + !String.IsEmpty(ListItem.Art(landscape))">$INFO[ListItem.Art(landscape)]</value>
		<value condition="Skin.HasSetting(View_50_Prefer_landscape) + [String.IsEmpty(ListItem.Art(landscape)) + !String.IsEmpty(ListItem.Art(fanart))]">$INFO[ListItem.Art(fanart)]</value>
		<value condition="Skin.HasSetting(View_50_Prefer_banner) + !String.IsEmpty(ListItem.Art(banner))">$INFO[ListItem.Art(banner)]</value>
		<value condition="Skin.HasSetting(View_50_Prefer_keyart) + !String.IsEmpty(ListItem.Art(keyart))">$INFO[ListItem.Art(keyart)]</value>
		<value condition="Skin.HasSetting(View_50_Prefer_animatedposter) + !String.IsEmpty(ListItem.Art(animatedposter))">$INFO[ListItem.Art(animatedposter)]</value>
		<value>$VAR[ImageLayout_poster]</value>
	</variable>	
	
	
    
