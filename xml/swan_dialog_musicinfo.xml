</include>

<include name="songsheet_row_container">
	<control type="group">
		<centertop>50%</centertop>
		<control type="image">
			<visible>!Window.IsActive(musicinformation)</visible>
			<description>test best pract for reduce colors</description>
			<!-- <texture colordiffuse="$PARAM[text_main]">colors/white10.png</texture> -->
			<texture colordiffuse="$VAR[color_spotlightlib_background_layer1]">colors/white40.png</texture>
			<bordersize>2</bordersize>
		</control>
		<control type="image">
			<visible>$PARAM[focsed]</visible>
			<bordertexture colordiffuse="$PARAM[text_main]" border="2" background="true">frames/frame.png</bordertexture>
			<texture colordiffuse="$VAR[color_spotlightlib_background_layer1]" background="true">colors/white10.png</texture>
			<bordersize>1</bordersize>
		</control>
		<control type="image">
			<visible>false</visible>
			<visible>$PARAM[focsed]</visible>
			<!-- <animation effect="zoom" start="100,100" end="103,100" center="100%,50%" time="200" tween="cubic" easing="in">Focus</animation> -->
			<bordertexture colordiffuse="$PARAM[text_main]" background="true">colors/white20.png</bordertexture>
			<texture colordiffuse="$VAR[color_spotlightlib_background_layer1]" background="true">colors/white40.png</texture>
			<bordersize>3</bordersize>
		</control>
		<control type="image">
			<visible>[$PARAM[focsed] | ListItem.IsPlaying | ListItem.IsSelected] + !String.IsEqual(ListItem.Label,..)</visible>
			<visible>!Container().Scrolling + !Container().OnScrollPrevious + !Container().OnScrollNext</visible>
			<animation effect="slide" start="0,0" end="-37,0" time="0" condition="true">conditional</animation>
			<animation effect="zoom" start="0" end="100" time="150" tween="cubic" easing="in" delay="25" center="auto">Focus</animation>
			<texture colordiffuse="$PARAM[text_main]" diffuse="overlay/overlayplay.png" background="true">colors/white40.png</texture>
			<centertop>50%</centertop>
			<width>30</width>
			<height>30</height>
			<bordersize>3</bordersize>
			<aspectratio aligny="center" align="center">kepp</aspectratio>
		</control>
		<control type="image">
			<visible>ListItem.IsPlaying | ListItem.IsSelected</visible>
			<animation effect="slide" start="0,0" end="-37,0" time="0" condition="true">conditional</animation>
			<centertop>50%</centertop>
			<width>30</width>
			<height>30</height>
			<bordersize>3</bordersize>
			<aspectratio aligny="center" align="center">kepp</aspectratio>
			<texture colordiffuse="$VAR[color_spotlightlib_accent]" background="true">special://skin/extras/song_gifs/playingsong.gif</texture>
			<bordertexture colordiffuse="ff131313">artworkdiffuse/circleborder.png</bordertexture>
		</control>
		<control type="label">
			<left>10</left>
			<width>500</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>$PARAM[text_main]</textcolor>
			<selectedcolor>$VAR[color_spotlightlib_accent]</selectedcolor>
			<label fallback=" ...">$INFO[ListItem.Tracknumber]</label>
		</control>
		<control type="textbox">
			<left>50</left>
			<width>445</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<textcolor>$PARAM[text_main]</textcolor>
			<selectedcolor>$VAR[color_lib_selected]</selectedcolor>
			<autoscroll>$PARAM[focsed]</autoscroll>
			<label>$VAR[slectedcolor_textbox_o]$INFO[ListItem.Title]$VAR[slectedcolor_textbox_c]</label>
		</control>
		<control type="label">
			<left>500</left>
			<width>100</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<textcolor>$PARAM[text_main]</textcolor>
			<selectedcolor>$VAR[color_spotlightlib_accent]</selectedcolor>
			<label>$INFO[ListItem.Duration]</label>
		</control>
		<control type="textbox">
			<left>610</left>
			<width>300</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<textcolor>$PARAM[text_main]</textcolor>
			<autoscroll>$PARAM[focsed]</autoscroll>
			<label>$VAR[slectedcolor_textbox_o]$INFO[ListItem.Artist]$VAR[slectedcolor_textbox_c]</label>
		</control>
		<control type="label">
			<left>920</left>
			<width>100</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<textcolor>$PARAM[text_main]</textcolor>
			<selectedcolor>$VAR[color_spotlightlib_accent]</selectedcolor>
			<label>$INFO[ListItem.Year]</label>
		</control>
		<control type="textbox">
			<left>1020</left>
			<width>200</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<textcolor>$PARAM[text_main]</textcolor>
			<autoscroll>$PARAM[focsed]</autoscroll>
			<label>$VAR[slectedcolor_textbox_o]$INFO[ListItem.Album]$VAR[slectedcolor_textbox_c]</label>
		</control>
		<control type="label">
			<description>container sortmethod  if not: duration,artist etc, need also workaround for dialogmusicinfo - as songsheet is shown on album level, where else is showing on container.content=songs</description>
			<visible>[String.IsEqual(Container.SortMethod,$LOCALIZE[570]) | String.IsEqual(Container.SortMethod,$LOCALIZE[558])]</visible>
			<visible>false</visible>
			<left>1220</left>
			<width>200</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<textcolor>$PARAM[text_main]</textcolor>
			<selectedcolor>$VAR[color_spotlightlib_accent]</selectedcolor>
			<label>$INFO[ListItem.Label2]</label>
		</control>
		<control type="textbox">
			<left>1250</left>
			<width>240</width>
			<font>notosans_15_semibold</font>
			<align>left</align>
			<textcolor>$PARAM[text_main]</textcolor>
			<autoscroll>$PARAM[focsed]</autoscroll>
			<label>$VAR[slectedcolor_textbox_o]$INFO[ListItem.Genre]$VAR[slectedcolor_textbox_c]</label>
		</control>
		<include content="stars_rating">
			<centertop>50%</centertop>
			<right>10</right>
			<param name="width" value="110" />
			<param name="height" value="50" />
			<param name="colordiffuse" value="$PARAM[text_accent]" />
		</include>	
	</control>
</include>
					
<variable name="slectedcolor_textbox_o">
	<value condition="ListItem.IsPlaying | ListItem.IsSelected">[COLOR $VAR[color_spotlightlib_accent]]</value>
	<value></value>
</variable>
<variable name="slectedcolor_textbox_c">
	<value condition="ListItem.IsPlaying | ListItem.IsSelected">[/COLOR]</value>
</variable>
</includes>