<?xml version="1.0" encoding="utf-8"?>
<includes>
<include name="container_atts">
	<orientation>$PARAM[orientation]</orientation>
	<height>$PARAM[height]</height>
</include>

<include name="temp_container3201">
	
	<control type="$PARAM[type]" id="3201">
		<description>replace of native id 50 for cond oncklick song listing on artist, song listing on album</description>
		<visible>!Window.Is(songinformation)</visible>
		<preloaditems>2</preloaditems>
		<scrolltime tween="quadratic">400</scrolltime>
		<focusposition>3</focusposition>
		<onclick condition="String.IsEqual(Container(3201).ListItem.dbtype,album)">PlayMedia(musicdb://albums/$INFO[Container(3201).ListItem.dbid]/)</onclick>
		
		<include condition="[Container.Content(artists) | String.IsEqual(ListItem.DBType,artist)]" content="container_atts">
			<param name="orientation" value="horizontal"/>
			<param name="height" value="300"/>
		</include>
		<include condition="![Container.Content(artists) | String.IsEqual(ListItem.DBType,artist)]" content="container_atts">
			<param name="orientation" value="vertical"/>
			<param name="height" value="800"/>
		</include>
		
		<animation type="conditional" condition="Control.HasFocus(3202)" reversible="true">
			<effect type="zoom" start="100" end="150" time="450" />
			<effect type="slide" start="0,0" end="-700,-50" time="450" />
			<effect type="fade" start="100" end="0" time="450" />
		</animation>
		
		<top>170</top>
		<left>200</left>
		<right>200</right>
		<onleft>8000</onleft>
		<onright>3201</onright>
		<onup>3101</onup>
		
		<onup>3101</onup>
		<ondown condition="Control.IsVisible(3202)">3202</ondown>
		<ondown condition="!Control.IsVisible(3202) + [Control.IsVisible(3301) + !Container(3301).IsUpdating]">3301</ondown>
		<ondown condition="!Control.IsVisible(3202) + ![Control.IsVisible(3301) + !Container(3301).IsUpdating]">3101</ondown>
	
		<itemlayout height="300" width="230" condition="Container.Content(artists) | String.IsEqual(ListItem.DBType,artist)">
			<control type="group">
				<animation effect="fade" start="100" end="0" time="200" condition="Control.HasFocus(3202)">conditional</animation>
	
				<width>220</width>
				<height>220</height>
				<include content="universal_itemlayout">
					<param name="artwork_bordercolor" value="$VAR[color_universalcontainer_itemframe_nf]" />
					<param name="artwork" value="square" />
					<param name="artwork_focusoverlay_visible" value="false" />
					<param name="infotags_visible" value="true" />
					<param name="infotags_autoscroll" value="false" />
					<param name="artwork_bg_bordersize" value="6" />
					<param name="infotags_bgpanel_color" value="$VAR[color_universalcontainer_itemtag_bgpanel_nf]" />
					<param name="infotags_label1_color" value="$VAR[color_universalcontainer_itemtag_label1_nf]" />
					<param name="infotags_label2_color" value="$VAR[color_universalcontainer_itemtag_label2_nf]" />
				</include>
			</control>
		</itemlayout>
		<focusedlayout height="300" width="230" condition="Container.Content(artists) | String.IsEqual(ListItem.DBType,artist)">
			<control type="group">
				<width>220</width>
				<height>220</height>
				<include>Animation_Item_Focus</include>
				<control type="group">
					<include content="universal_itemlayout">
						<param name="artwork_bordercolor" value="$VAR[color_universalcontainer_itemframe_fo]" />
						<param name="artwork" value="square" />
						<param name="artwork_focusoverlay_visible" value="true" />
						<param name="infotags_visible" value="!Control.HasFocus(3202)" />
						<param name="infotags_autoscroll" value="true" />
						<param name="artwork_bg_bordersize" value="4" />
						<param name="infotags_bgpanel_color" value="$VAR[color_universalcontainer_itemtag_bgpanel_fo]" />
						<param name="infotags_label1_color" value="$VAR[color_universalcontainer_itemtag_label1_fo]" />
						<param name="infotags_label2_color" value="$VAR[color_universalcontainer_itemtag_label2_fo]" />
					</include>
				</control>
			</control>
		</focusedlayout>
		<itemlayout height="50" condition="Container.Content(albums) | String.IsEqual(ListItem.DBType,album)">
			<include content="songsheet_row_container">
				<param name="focsed" value="false"/>
				<param name="text_main" value="$VAR[color_lib_text_secondary]"/>
				<param name="text_secondary" value="$VAR[color_lib_text_secondary]"/>
				<param name="text_accent" value="$VAR[color_lib_text_secondary]"/>
			</include>
		</itemlayout>
		<focusedlayout height="50" condition="Container.Content(albums) | String.IsEqual(ListItem.DBType,album)">
			<include content="songsheet_row_container">
				<param name="focsed" value="true"/>
				<param name="text_main" value="$VAR[color_lib_text_main]"/>
				<param name="text_secondary" value="$VAR[color_lib_text_secondary]"/>
				<param name="text_accent" value="$VAR[color_lib_accent]"/>
			</include>
		</focusedlayout>
		<content>$VAR[musicinfo_content_3201]</content>
	</control>
</include>


<variable name="musicinfo_content_3201">
	<value condition="Container.Content(Artists) | String.IsEqual(ListItem.DBType,artist)">musicdb://artists/$INFO[ListItem.dbid]/?albumartistsonly=false&amp;artistid=$INFO[ListItem.dbid]</value>
	<value>musicdb://albums/$INFO[ListItem.dbid]/?albumartistsonly=false&amp;albumid=$INFO[ListItem.dbid]</value>
</variable>

<include name="musicinfo_PlaybackCtrlButton">
	<param name="action" default=""/>
	<param name="width" default="50"/>
	<param name="height" default="50"/>
	<definition>
		<control type="button" id="$PARAM[id]">
			<width>$PARAM[width]</width>
			<height>$PARAM[height]</height>
			<texturefocus colordiffuse="$VAR[color_lib_menu_accent]">buttons/osd/$PARAM[action]_fo.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[color_lib_menu_item_nf]">buttons/osd/$PARAM[action].png</texturenofocus>
			<onclick>$PARAM[action2]</onclick>
			<onclick>$PARAM[action]</onclick>
		</control>
	</definition>
</include>
	
	
<include name="songsheet_colums">
	<param name="top" default="120"/>
	<param name="left" default="200"/>
	<param name="right" default="200"/>
	<param name="color_main" default="$VAR[color_lib_text_main]"/>
	<definition>
	
	
		<control type="group">
			<visible>$PARAM[visible]</visible>
			<!-- <animation effect="fade" end="10" condition="true">conditional</animation> -->
			
			<top>$PARAM[top]</top>
			<left>$PARAM[left]</left>
			<right>$PARAM[right]</right>
			<height>50</height>
				
			<control type="image">
				<top>38</top>
				<left>0</left>
				<right>-15</right>
				<height>1</height>
				<texture colordiffuse="$VAR[color_spotlightlib_accent]" background="true">colors/white40.png</texture>
