			</control>
			<control type="label">
				<description>year</description>
				<top>3</top>
				<left>920</left>
				<width>100</width>
				<height>30</height>
				<font>notosans_16_bold</font>
				<align>left</align>
				<textcolor>$PARAM[color_main]</textcolor>
				<selectedcolor>$VAR[color_lib_selected]</selectedcolor>
				<label>Y E A R</label>
			</control>
			<control type="label">
				<description>year</description>
				<top>3</top>
				<left>1020</left>
				<width>200</width>
				<height>30</height>
				<font>notosans_16_bold</font>
				<align>left</align>
				<textcolor>$PARAM[color_main]</textcolor>
				<selectedcolor>$VAR[color_lib_selected]</selectedcolor>
