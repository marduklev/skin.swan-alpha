						<bottom>10</bottom>
						<right>10</right>
						<height>30</height>
						<width>300</width>
						<align>right</align>
						<font>debugtiny</font>
						
						<label>$VAR[Meta_Top_Details]</label>
						<textcolor>$PARAM[tc]</textcolor>
					</control> -->
					
					
					
					
					
				</control>
			</definition>
		</include>
		
</includes>
